<!--+
    | DB OJB GUMP Descriptor
    |
    | $Id: db-ojb.xml,v 1.36 2004/12/21 12:36:19 bodewig Exp $
    +-->
<module name="db-ojb">
  <url href="http://db.apache.org/ojb/"/>
  <description>
    ObjectRelationalBridge
  </description>

  <cvs repository="db"/>

  <!-- this definition is allowed to depend on packaged versions and
       allows OJB's dependees to compile as long as OJB hasn't adapted to
       changes in its dependencies -->
  <project name="db-ojb-from-packages">
    <package>org.apache.ojb</package>

    <delete dir="target/classes"/>
    <mkdir dir="target/classes" />
    <ant target="jar">
      <property name="archive" value="db-ojb-from-packages-@@DATE@@" />
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>

    <depend project="antlr"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-digester"/>
    <depend project="commons-dbcp"/>
    <depend project="commons-lang"/>
    <depend project="commons-logging"/>
    <depend project="commons-pool"/>
    <depend project="commons-sql"/>
    <depend project="commons-betwixt"/>
    <depend project="commons-graph"/>
    <depend project="db-commons-grafolia-1.0"/>
    <depend project="hsqldb"/>
    <depend project="j2ee-connector" />
    <depend project="jaas" />
    <depend project="avalon-framework-api"/>
    <depend project="avalon-framework-legacy"/>
    <depend project="avalon-framework-impl"/>
    <depend project="jakarta-velocity"/>
    <depend project="excalibur-component"/>
    <depend project="avalon-logkit"/>
    <depend project="logging-log4j"/>
    <depend project="jakarta-regexp"/>
    <depend project="jakarta-servletapi"/>
    <depend project="jdbc"/>
    <depend project="jdo"/>
    <depend project="jmx"/>
    <depend project="jta"/>
    <depend project="junit"/>
    <depend project="p6spy"/>
    <depend project="picocontainer"/>
    <depend project="spring"/>

    <depend project="db-torque" />
    <depend project="db-torque-gen-3.1.1" />
    <depend project="jakarta-turbine-jcs" />

    <!-- needed by test sources -->
    <depend project="ejb" />

    <!-- needed for documentation -->
    <depend project="xalan"/>

    <work nested="target/classes/main" />

    <jar name="dist/db-ojb-from-packages-@@DATE@@.jar" />
    <license name="LICENSE"/>

    <nag from="Stefan Bodewig &lt;bodewig@apache.org&gt;"
         to="ojb-dev@db.apache.org"/>
  </project>

  <!-- this project definition should use CVS HEAD of all dependencies -->
  <project name="db-ojb">
    <package>org.apache.ojb</package>

    <delete dir="target/classes"/>
    <mkdir dir="target/classes" />
    <ant target="jar">
      <property name="archive" value="db-ojb-@@DATE@@" />
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>

    <depend project="antlr"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-digester"/>
    <depend project="commons-dbcp"/>
    <depend project="commons-lang"/>
    <depend project="commons-logging"/>
    <depend project="commons-pool"/>
    <depend project="commons-sql"/>
    <depend project="commons-betwixt"/>
    <depend project="commons-graph"/>
    <depend project="db-commons-grafolia"/>
    <depend project="hsqldb"/>
    <depend project="j2ee-connector" />
    <depend project="jaas" />
    <depend project="avalon-framework-api"/>
    <depend project="avalon-framework-legacy"/>
    <depend project="avalon-framework-impl"/>
    <depend project="jakarta-velocity"/>
    <depend project="excalibur-component"/>
    <depend project="avalon-logkit"/>
    <depend project="logging-log4j"/>
    <depend project="jakarta-regexp"/>
    <depend project="jakarta-servletapi"/>
    <depend project="jdbc"/>
    <depend project="jdo"/>
    <depend project="jmx"/>
    <depend project="jta"/>
    <depend project="junit"/>
    <depend project="p6spy"/>
    <depend project="picocontainer"/>
    <depend project="spring"/>

    <depend project="db-torque" />
    <depend project="db-torque-gen" />
    <depend project="jakarta-turbine-jcs" />

    <!-- needed by test sources -->
    <depend project="ejb" />

    <!-- needed for documentation -->
    <depend project="xalan"/>

    <work nested="target/classes/main" />

    <jar name="dist/db-ojb-@@DATE@@.jar" />

    <nag from="Stefan Bodewig &lt;bodewig@apache.org&gt;"
         to="ojb-dev@db.apache.org"/>
  </project>

  <project name="test-ojb">
    <ant target="junit" />

    <depend project="db-ojb" inherit="all" />
    <work nested="target/classestest" />

    <nag from="Stefan Bodewig &lt;bodewig@apache.org&gt;"
         to="ojb-dev@db.apache.org"
         subject="Test Failure - OJB" />
  </project>

  <project name="p6spy">
    <jar name="lib/p6spy.jar" />
  </project>

  <project name="db-commons-grafolia-1.0">
    <jar name="lib/commons-grafolia-1.0.jar"/>
  </project>

  <project name="db-torque-gen-3.1.1">
    <jar name="lib/torque-gen-3.1.1.jar"/>
  </project>

</module>
