<module name="ws-fx">

  <description>WS-FX Project</description>
  <url href="http://ws.apache.org/ws-fx/" />
  <cvs repository="ws-fx" />
  
  <project name="addressing">
  
    <maven goal="jar" basedir="addressing">
      <property name="maven.final.name" value="addressing-@@DATE@@" />
    </maven>

    <package>org.apache.axis.message.addressing</package>
    
    <depend project="commons-discovery"/>
    <depend project="commons-logging" />
    <!-- below provides axis.jar, axis-ant.jar, axis-jaxrpc.jar, and axis-saaj.jar -->
    <depend project="ws-axis" /> 
    <depend project="wsdl4j" />
    
    <!-- work dirs to be included in classpath -->
    <work nested="addressing/target/classes" />
   
    <!-- top-level build output dir -->
    <home nested="addressing/target" />
    
    <!-- jar(s) produced by the build -->
    <jar name="addressing-@@DATE@@.jar" />
    
    <license name="addressing/LICENSE.txt" />
    
    <nag to="fx-dev@ws.apache.org" from="WSFX Development &lt;fx-dev@ws.apache.org&gt;" />
    
  </project>
  
</module>
