<module name="jakarta-commons-sandbox">

  <description>
    Jakarta commons sandbox
  </description>

  <cvs repository="jakarta"/>

  <project name="commons-compress">
    <package>org.apache.commons.compress</package>
    <description>Commons Compression Package</description>
    
    <maven basedir="compress" goal="jar">
      <property name="maven.final.name" value="commons-compress-@@DATE@@"/>
    </maven>

    <depend project="ant" inherit="runtime"/>
    <depend project="junit" />
    <depend project="xml-xerces" />

    <home nested="compress/target" />

    <jar name="commons-compress-@@DATE@@.jar" />

    <javadoc nested="target/docs/apidocs" />

    <nag to="commons-dev@jakarta.apache.org" from="commons-compress development &lt;commons-dev@jakarta.apache.org&gt;" />
  </project>

  <project name="commons-functor">
    <package>org.apache.commons.functor</package>
    <description>Functor: Function Objects</description>
    <url href="http://jakarta.apache.org/commons/sandbox/functor/"/>
    
    <maven basedir="functor" goal="jar">
      <property name="maven.final.name" value="commons-functor-@@DATE@@"/>
    </maven>
   
    <depend project="ant" inherit="runtime"/>
    <depend project="junit"/>
    
    <work nested="functor/target/classes"/>
    <work nested="functor/target/test-classes"/>
    
    <!-- unit tests load resources from source tree -->
    <work nested="functor/src/test"/>
    <home nested="functor/target"/>
    <jar name="commons-functor-@@DATE@@.jar"/>
    <javadoc nested="functor/docs/apidocs"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="commons-functor development team &lt;commons-dev@jakarta.apache.org&gt;"/>
  </project>

  <project name="commons-grant">
    <ant basedir="grant" target="dist">
      <property name="final.name" value="commons-grant-@@DATE@@"/>
    </ant>
    <package>org.apache.commons.grant</package>
    <depend project="ant"/>
    <depend project="junit"/>
    <depend project="xml-xerces"/>
    <work nested="grant/target/classes"/>
    <home nested="grant/target"/>
    <jar name="commons-grant-@@DATE@@.jar"/>
    <nag to="commons-dev@jakarta.apache.org" from="commons-grant development &lt;commons-dev@jakarta.apache.org&gt;"/>
  </project>

  <project name="commons-graph">
    <maven basedir="graph2" goal="jar">
      <property name="maven.final.name" value="commons-graph-@@DATE@@"/>
    </maven>
    <package>org.apache.commons.graph</package>
    <depend project="commons-collections"/>
    <depend project="ant"/>
    <depend project="jdepend"/>
    <depend project="junit"/>
    <depend project="logging-log4j"/>
    <depend project="nsuml"/>
    <depend project="xml-apis"/>
    <depend project="xml-xerces"/>
    <work nested="graph2/target/classes"/>
    <work nested="graph2/target/test-classes"/>
    <home nested="graph2/target"/>
    <jar name="commons-graph-@@DATE@@.jar"/>
    <javadoc module="jakarta-commons-sandbox" nested="target/docs/apidocs"/>
    <nag to="commons-dev@jakarta.apache.org" from="commons-graph development &lt;commons-dev@jakarta.apache.org&gt;">
    </nag>
  </project>

  <project name="commons-http">
    <package>org.apache.commons.http</package>
    <description>Commons HTTP Utility Package</description>
    <ant basedir="http" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <jar name="http/dist/commons-http.jar"/>
    <javadoc nested="http/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>
    
  <project name="commons-id">
    <package>org.apache.commons.id</package>
    <description>Commons Identifier Package</description>

    <maven basedir="id" goal="jar">
      <property name="maven.final.name" value="commons-id-@@DATE@@"/>
    </maven>

    <depend project="ant"/>
    <depend project="commons-discovery"/>
    <depend project="commons-logging"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>
    <home nested="id/target"/> 
    <jar name="commons-id-@@DATE@@.jar"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Adam Jack &lt;ajack@apache.org&gt;"/>
  </project>
  
  <project name="commons-jjar">
    <package>org.apache.commons.jjar</package>
    <description>Jakarta Jar Archive Repository</description>
    <ant basedir="jjar" target="dist">
      <depend property="minml2.jar"  project="minml2"/>
      <depend property="junit.jar"   project="junit"/>
    </ant>
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <work nested="jjar/classes"/>
    <work nested="jjar/tests"/>
    <jar name="jjar/dist/jjar.jar"/>
    <javadoc nested="jjar/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-jux">
    <package>org.apache.commons.jux</package>
    <description>JUX: JUnit Extensions</description>
    <url href="http://jakarta.apache.org/commons/sandbox/jux/"/>
    
    <maven basedir="jux" goal="jar">
      <property name="maven.final.name" value="commons-jux-@@DATE@@"/>
    </maven>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>

    <work nested="jux/target/classes"/>
    <work nested="jux/target/test-classes"/>
    <home nested="jux/target"/>
    <jar name="commons-jux-@@DATE@@.jar"/>
    <javadoc nested="jux/dist/docs/api"/>
    <nag to="commons-dev@jakarta.apache.org"
         from="commons-jux development team &lt;commons-dev@jakarta.apache.org&gt;"/>
  </project>

  <project name="commons-messenger">
    <package>org.apache.commons.messenger</package>
    <description>A web based JMS framework</description>
    <url href="http://jakarta.apache.org/commons/sandbox/messenger/"/>
    
    <!-- Standard Maven target to produce Javadocs, source -->
    <!-- and binary distributions.                         -->
    
    <maven basedir="messenger" goal="jar">
      <property name="maven.final.name" value="commons-messenger-@@DATE@@"/>
    </maven>
    
    <!-- All Maven projects need Ant and Xerces to build. -->
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>

    <depend project="commons-digester"/>
    <depend project="commons-collections"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-logging"/>
    <depend project="jakarta-servletapi-4"/>
    <depend project="geronimo-spec-jms"/>
    <depend project="geronimo-spec-jta"/>

    <work nested="target/classes"/>
    <home nested="messenger/target"/>
    <jar name="commons-messenger-@@DATE@@.jar"/>
    <javadoc nested="messenger/docs/apidocs"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="James Strachan &lt;jstrachan@apache.org&gt;"/>
  </project>

  <project name="commons-services">
    <package>org.apache.commons.services</package>
    <description>Basic Services Architecture</description>
    <ant basedir="services" target="dist"/>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-digester"/>
    <depend project="commons-logging"/>
    <depend project="commons-pool"/>

    <jar name="services/dist/commons-services.jar"/>
    <javadoc nested="services/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-sql">
    <package>org.apache.commons.services</package>
    <description>Basic Services Architecture</description>
    <ant basedir="sql" target="dist">
      <property name="version" value="@@DATE@@"/>
      <property name="final.name" value="commons-sql-@@DATE@@"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-betwixt"/>
    <depend project="commons-cli"/>
    <depend project="commons-collections"/>
    <depend project="commons-digester"/>
    <depend project="commons-jelly"/>
    <depend project="commons-logging"/>
    <depend project="dom4j"/>
    <depend project="xml-xerces"/>

    <!-- test time dependencies -->
    <depend project="axion"/>
    <depend project="commons-primitives"/>
    <depend project="junit"/>
    <work nested="sql/target/classes"/>
    <work nested="sql/target/test-classes"/>

    <jar name="sql/dist/commons-sql-@@DATE@@.jar"/>
    <javadoc nested="sql/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Gump &lt;general@gump.apache.org&gt;"/>
  </project>

  <project name="commons-test">
    <package>org.apache.commons.test</package>
    <description>Commons Test Package</description>
    <maven basedir="test">
      <property name="maven.final.name"  value="commons-test-@@DATE@@"/>
    </maven>
    <depend project="ant"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>
    
    <jar name="test/target/commons-test-@@DATE@@.jar"/>

    <nag to="general@gump.apache.org"
         from="Gump Integration Service &lt;general@gump.apache.org&gt;"/>
  </project>
    
  <project name="commons-threading">
    <package>org.apache.commons.threading</package>
    <description>Commons Threading Utility Package</description>
    <ant basedir="threading" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <jar name="threading/dist/commons-threading-@@DATE@@.jar"/>
    <javadoc nested="threading/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-vfs">
    <ant basedir="vfs" target="dist">
      <property name="final.name" value="commons-vfs-@@DATE@@"/>
    </ant>
    <package>org.apache.commons.vfs</package>
    <depend project="ant"/>
    <depend project="junit"/>
    <depend project="xml-xerces"/>
    <depend project="commons-logging"/>
    <depend project="commons-collections"/>
    <depend project="commons-compress"/>
    <option project="commons-httpclient-2.0-branch"/>
    <option project="commons-net"/>
    <option project="slide-webdavclient" ids="client-webdavlib"/>
    <option project="jcifs"/>
    <option project="jsch"/>
    
    <work nested="vfs/target/classes"/>
    <home nested="vfs/target"/>
    <jar name="commons-vfs-@@DATE@@.jar"/>
    <javadoc module="jakarta-commons-sandbox" nested="target/docs/apidocs"/>
    <nag to="commons-dev@jakarta.apache.org" from="commons-vfs development &lt;commons-dev@jakarta.apache.org&gt;"/>
  </project>
  
  <project name="minml2">
    <url href="http://www.wilson.co.uk/xml/minml2.htm"/>
    <description>
      Namespace aware minimal XML parser
    </description>

    <jar name="jjar/lib/MinML2.jar"/>
  </project>

</module>
