<module name="ws-jaxme">

  <url href="http://ws.apache.org/jaxme/"/>
  <description>
    Open Source implementation of JAXB
  </description>

  <cvs repository="ws"/>

  <!-- build -->
  <project name="ws-jaxme">
    <package>org.apache.ws.jaxme</package>
    <package>javax.xml.bind</package>

    <ant target="all">
      <property name="env.ANT_HOME" reference="home" project="ant"/>
    </ant>

    <depend project="xml-xerces"/>
    <depend project="ant" inherit="runtime"/>
    <depend project="beaver"/>
    <depend project="hsqldb"/>
    <depend project="logging-log4j"/>
    <depend project="xmldb"/>
    <option project="junit"/>
    <option project="antlr"/>

    <mkdir dir="build/js/classes"/>
    <mkdir dir="build/api/classes"/>
    <mkdir dir="build/xs/classes"/>
    <mkdir dir="build/jm/classes"/>
    <mkdir dir="build/pm/classes"/>

    <work nested="build/js/classes"/>
    <work nested="build/api/classes"/>
    <work nested="build/xs/classes"/>
    <work nested="build/jm/classes"/>
    <work nested="build/pm/classes"/>
    <work nested="src/jaxme"/>

    <home nested="dist"/>
    <jar name="jaxme2-rt.jar" id="rt"/>
    <jar name="jaxme2.jar" id="jaxme2"/>
    <jar name="jaxmeapi.jar" id="api"/>
    <jar name="jaxmejs.jar" id="js"/>
    <jar name="jaxmexs.jar" id="xs"/>

    <license name="LICENSE"/>

    <javadoc nested="build/docs/build/site/api"/>

    <nag from="Davanum Srinivas &lt;dims@yahoo.com&gt;"
         to="jaxme-dev@ws.apache.org">
      <regexp  subject="Build Failure - JaxMe"/>
      <regexp pattern="/timed out/" subject="Build timed out - JaxMe"/>
    </nag>
  </project>

</module>
