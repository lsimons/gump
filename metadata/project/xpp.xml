<module name="xpp">

  <url  href="http://www.extreme.indiana.edu/xgws/xsoap/xpp/"/>
  <description>
    XML Pull Parser
  </description>
  <redistributable/>

  <cvs repository="xpp" module="XPP3/java"/>
  
  <project name="xpp">
    <package>org.xmlpull</package>
    <ant target="all">
      <property name="version" value="@@DATE@@"/>
    </ant>
    <depend project="ant"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>

    <work nested="build/api"/>
    <work nested="build/classes"/>
    <work nested="build/xpath"/>

    <license name="LICENSE.txt"/>
    <jar name="build/xpp3-@@DATE@@.jar" id="xpp"/>
    <jar name="build/xpp3_min-@@DATE@@.jar" id="min"/>
    <jar name="build/xpp3_xpath-@@DATE@@.jar" id="xpath"/>
  </project>

  <project name="xpp3">
    <package>org.xmlpull</package>
    <depend project="xpp"/>
    <license name="LICENSE.txt"/>
    <jar name="build/xpp3-@@DATE@@.jar" id="xpp3"/>
  </project>
</module>
