<module name="dumbster">

  <url href="http://quintanasoft.com/dumbster/"/>
  <description>
  The Dumbster is a very simple fake SMTP server designed for unit and system testing applications that send email messages
  </description>

  <cvs repository="sourceforge" dir="dumbster" module="dumbster"/>

  <project name="dumbster">
    <package>com.dumbster.smtp</package>

    <ant target="world"/>

    <depend project="ant"/>
    <depend project="jaf"/>
    <depend project="junit"/>
    <depend project="javamail"/>
    <depend project="xml-xerces"/>

    <work nested="build/classes"/>
    <work nested="build/test"/>

    <jar name="build/dumbster.jar"/>

    <license name="license.txt"/>
    
    <nag from="Jason Kitchen &lt;jasonkitchen@users.sourceforge.net&gt;" to="jasonkitchen@users.sourceforge.net" />    
  </project>

</module>
