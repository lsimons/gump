<module name="xml-fop">

  <url href="http://xml.apache.org/fop/index.html"/>
  <description>
    XSL-FO (Formatting Objects) processor
  </description>

  <cvs repository="xml"/>

  <!-- main project -->

  <project name="xml-fop">
    <package>org.apache.fop</package>

    <mkdir dir="build/classes"/>
    <mkdir dir="build/test-classes"/>
    <ant target="gump"/>
    <depend project="xml-xerces"/>
    <depend project="xalan"/>
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-batik"/>
    <depend project="avalon-framework-api"/>
    <depend project="avalon-framework-legacy"/>
    <depend project="avalon-framework-impl"/>
    <depend project="commons-logging" ids="commons-logging"/>
    <depend project="commons-io"/>
    <!--depend project="jfor"/-->
    <depend project="jakarta-servletapi"/>

    <!-- for SerializeHyphPattern task -->
    <work nested="build/classes"/>
    <work nested="build/test-classes"/>

    <home nested="build"/>
    <jar  name="fop.jar"/>
    <javadoc nested="build/javadocs"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;" to="fop-dev@xml.apache.org"/>
  </project>

</module>
