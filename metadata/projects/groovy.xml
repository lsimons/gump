<module name="groovy">
  <description>
    New agile dynamic language using a Java-like syntax for the JVM combining
    lots of great features from languages like Python, Ruby and Smalltalk.
  </description>
  <url href="http://groovy.codehaus.org/"/>
  <cvs module="groovy/groovy-core" repository="groovy"/>
  
  <project name="groovy">
    <package>org.codehaus.groovy</package>
    <package>groovy</package>

    <maven goal="jar"/>

    <depend project="ant"/>
    <depend project="asm"/>
    <depend project="axion"/>
    <depend project="classworlds"/>
    <depend project="commons-cli"/>
    <depend project="commons-collections"/>
    <depend project="commons-httpclient"/>
    <depend project="commons-logging"/>
    <depend project="jakarta-bsf"/>
    <depend project="jakarta-regexp"/>
    <depend project="jakarta-servletapi-4"/>
    <depend project="junit"/>
    <depend project="mockobjects-with-groovy-compatible-jar-id"/>
    <depend project="mx4j"/>
    <depend project="nekohtml"/>
    <depend project="openejb"/>
    <depend project="qdox"/>
    <depend project="radeox"/>
    <depend project="xml-apis"/>
    <depend project="xml-xerces"/>

    <jar name="target/1.0-beta-8-SNAPSHOT.jar"/>
    <license name="LICENSE.txt"/>
  </project>
</module>
