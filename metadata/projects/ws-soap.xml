<module name="ws-soap">

  <url href="http://ws.apache.org/soap/index.html"/>
  <description>
    Simple Object Access Protocol
  </description>

  <cvs repository="ws"/>
  
  <!-- Temporary Alias -->
  <project name="xml-soap">
    <depend project="ws-soap" inherit="jars"/>
  </project>
  
  <project name="ws-soap">
    <package>org.apache.soap</package>

    <ant basedir="java" target="dist"/>

    <depend project="xml-xerces"/>
    <depend project="ant" inherit="runtime"/>
    <depend project="javamail"/>
    <depend project="jaf"/>
    <depend project="jakarta-servletapi"/>
    <option project="bsf"/>
    <option project="jsse"/>
    <option project="ejb"/>
    <option project="junit"/>
    <work nested="java/build/lib/soap.jar"/>
    <work nested="java/build"/>

    <home nested="java/build"/>
    <jar name="lib/soap.jar"/>
    <license name="LICENSE"/>
    <javadoc nested="java/build/javadocs"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="soap-dev@ws.apache.org"/>
  </project>

</module>
