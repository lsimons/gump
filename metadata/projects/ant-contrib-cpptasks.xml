  <url  href="http://sourceforge.net/projects/ant-contrib/"/>
  <description>
    C/C++ compilation tasks for Ant
  </description>
  <redistributable/>

  <cvs repository="sourceforge" dir="ant-contrib"/>
  
  <project name="ant-contrib-cpptasks">
    <ant target="gump" />

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>

    <home nested="build"/>
    <jar name="lib/cpptasks.jar" />
    <license name="LICENSE"/>
    <javadoc nested="build/javadocs" module="ant-contrib"/>

    <nag from="Gump Integration Build &lt;general@gump.apache.org&gt;"
         to="ant-contrib-developers@lists.sourceforge.net"/>
  </project>

  <project name="ant-contrib-cpptasks-test">
    <description>JUnit tests for the C/C++ compilation tasks</description>

    <ant target="run-tests" />

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="ant-contrib-cpptasks"/>
    <depend project="junit"/>

    <work nested="build/tests" />

    <nag from="Gump Integration Build &lt;general@gump.apache.org&gt;"
         to="ant-contrib-developers@lists.sourceforge.net"/>
  </project>
</module>
