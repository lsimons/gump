<module name="maven">


  <url href="http://maven.apache.org/"/>
  <description>Project Management Tools</description>
  
  <svn repository="maven" dir="maven-1/core/trunk"/>
  
  <project name="maven-bootstrap">
    <ant buildfile="build-bootstrap.xml">
      <property name="maven.bootstrap.online" value="-o"/>
      <property name="maven.bootstrap.dir" path="bootstrap"/>
      <property name="maven.bootstrap.classes" path="bootstrap/bootstrap-classes"/>
      <property name="maven.bootstrap.phase1.classes" path="bootstrap/phase1-classes"/>
      <property name="maven.home" path="bootstrap/maven.home"/>
      <property name="maven.local.repo" path="bootstrap/maven.local.repo"/>
      <property name="maven.jar.override" value="true"/>

      <depend project="commons-cli" property="maven.jar.commons-cli"/> 
      <depend project="commons-lang" property="maven.jar.commons-lang"/> 
      <depend project="commons-logging" property="maven.jar.commons-logging" id="commons-logging"/> 
      <depend project="commons-httpclient" property="maven.jar.commons-httpclient"/> 
      <depend project="dom4j" property="maven.jar.dom4j"/> 
      <depend project="ant" property="maven.jar.ant" id="ant"/> 
      <depend project="jakarta-velocity" property="maven.jar.velocity"/> 
      <depend project="xml-commons-which" property="maven.jar.which"/> 
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="commons-betwixt"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-digester"/>
    <depend project="commons-jexl"/>
    <depend project="commons-jelly"/>
    <depend project="commons-jelly-tags-ant"/>
    <depend project="commons-jelly-tags-define"/>
    <depend project="commons-jelly-tags-util"/>
    <depend project="commons-jelly-tags-xml"/>
    <depend project="commons-grant"/>
    <depend project="commons-graph"/>
    <depend project="commons-io"/>
    <depend project="jdepend"/>
    <depend project="jakarta-log4j" />
    <depend project="xml-commons-which"/>
    <!-- not yet known to Gump -->
    <!--depend project="plexus" /-->
    <depend project="xpp" />

    <work nested="bootstrap/bootstrap-classes"/>
    
    <!-- nag from="dIon Gillard &lt;dion@multitask.com.au&gt;"
         to="dev@maven.apache.org"/ -->
  </project>

  <!-- This is really the cvs module. We need to change this but -->
  <!-- I will leave this for now until everything works.         -->
  
  <project name="maven">
    
    <!-- Standard Maven target to produce Javadocs, source -->
    <!-- and binary distributions.                         -->
    
    <mkdir dir="target/classes"/>
    <mkdir dir="target/test-classes"/>

    <maven basedir="." goal="jar"/>

    <!-- The dependency list below is generated by the gump plugin for Maven -->
    <depend project="commons-beanutils" />
    <depend project="commons-cli" />
    <depend project="commons-collections" />
    <depend project="commons-digester" />
    <depend project="commons-grant" />
    <depend project="commons-graph" />
    <depend project="commons-httpclient" />
    <depend project="commons-io" />
    <depend project="commons-jelly" />
    <depend project="commons-jelly-tags-ant" />
    <depend project="commons-jelly-tags-define" />
    <depend project="commons-jelly-tags-util" />
    <depend project="commons-jelly-tags-xml" />
    <depend project="commons-jexl" />
    <depend project="commons-lang" />
    <depend project="commons-logging" />
    <depend project="dom4j" />
    <!-- not yet known to Gump -->
    <!--depend project="forehead" /-->
    <depend project="jakarta-ant" />
    <depend project="jakarta-log4j" />
<!-- Remarkable that Maven depends on itself according to the plugin.
    <depend project="maven" /> -->
    <!-- not yet known to Gump -->
    <!--depend project="plexus" /-->
    <depend project="xml-apis" />
    <depend project="xml-commons-which" />
    <depend project="xml-resolver" />
    <depend project="xml-xerces" />
    <depend project="xpp3" />
    
    <work nested="target/classes"/>
    <work nested="target/test-classes"/>
    <home nested="target"/>
    <jar name="maven-@@DATE@@.jar"/>
    <javadoc nested="docs/apidocs"/>
    
    <!-- nag from="dIon Gillard &lt;dion@multitask.com.au&gt;"
         to="dev@maven.apache.org"/ -->
  </project>
  
</module>
