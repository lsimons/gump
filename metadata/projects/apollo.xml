<module name="apollo">

  <description>Apollo Project</description>
  <url href="http://incubator.apache.org/apollo/" />
  <svn repository="apache-incubator-svn" dir="apollo/trunk"/>
  
  <project name="apollo">
  
    <maven goal="jar">
      <property name="maven.final.name" value="apollo-@@DATE@@" />
    </maven>
    <package>org.apache.ws.resource</package>
    
    <depend project="addressing" />
    <depend project="ant" />
    <depend project="apollo-jndi-config" />
    <depend project="commonj" />
    <depend project="commons-cli" />
    <depend project="commons-collections" />
    <depend project="commons-digester" />
    <depend project="commons-discovery" />
    <depend project="commons-httpclient" />
    <depend project="commons-lang" />
    <depend project="commons-logging" />
    <depend project="concurrent"/>    
    <depend project="jakarta-servletapi-5-servlet" />
    <depend project="jaxen" />
    <depend project="ws-axis" />
    <depend project="wsdl4j" />
    <depend project="wsrf-xbeans" />
    <depend project="xalan" /> <!-- needed when building w/ JDK 1.5 or Kaffe -->
    <depend project="xml-xmlbeans-v1" />
    
    <!-- work dirs to be included in classpath -->
    <work nested="target/classes" />
    
    <home nested="target" />
    
    <!-- jar(s) produced by the build -->
    <jar name="apollo-@@DATE@@.jar" />
    
    <license name="LICENSE.txt" />
    
    <nag to="apollo-dev@ws.apache.org" from="Ian Springer &lt;ipsATapacheDOTorg&gt;" />
    
  </project>

  <project name="wsrf-xbeans">
  
    <maven basedir="wsrf-xbeans" goal="jar">
      <property name="maven.final.name" value="wsrf-xbeans-@@DATE@@" />
    </maven>
    <package>org.oasisOpen.docs.wsrf.x2004.x06</package>
    <package>org.xmlsoap.schemas.ws.x2003.x03.addressing</package>
    
    <depend project="xml-xmlbeans-v1" />
    
    <!-- work dirs to be included in classpath -->
    <work nested="target/classes" />
    
    <!-- jar(s) produced by the build -->
    <jar name="wsrf-xbeans/target/wsrf-xbeans-@@DATE@@.jar" />
    
    <license name="LICENSE.txt" />
    
    <nag to="apollo-dev@ws.apache.org" from="Ian Springer &lt;ipsATapacheDOTorg&gt;" />
    
  </project>  
  
  <project name="apollo-jndi-config">
  
    <maven basedir="jndi-config" goal="jar">
      <property name="maven.final.name" value="apollo-jndi-config-@@DATE@@" />
    </maven>
    <package>org.apache.wsfx.wsrf.jndi.config</package>
    
    <depend project="xml-xmlbeans-v1" />
    
    <!-- work dirs to be included in classpath -->
    <work nested="target/classes" />
    
    <!-- jar(s) produced by the build -->
    <jar name="jndi-config/target/apollo-jndi-config-@@DATE@@.jar" />
    
    <license name="LICENSE.txt" />
    
    <nag to="apollo-dev@ws.apache.org" from="Ian Springer &lt;ipsATapacheDOTorg&gt;" />
    
  </project>  
  
</module>
