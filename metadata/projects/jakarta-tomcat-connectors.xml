<module name="jakarta-tomcat-connectors">

  <description>
    Connectors to various web servers
  </description>
  <url href="http://jakarta.apache.org/tomcat/index.html"/>

  <cvs repository="jakarta" />

  <project name="jakarta-tomcat-connectors">
    <!-- dummy to provide a "home" reference for the tomcat-catalina build -->
  </project>

  <project name="jakarta-tomcat-util">
    <package>org.apache.tomcat.util</package>
    <ant basedir="util">
      <property name="jmx.home" reference="home" project="jmx"/>
      <depend property="jmx.jar" project="jmx" id="jmxri" />
      <property name="jsse.home" reference="home" project="jsse"/>
      <depend property="commons-logging.jar"  id="commons-logging" project="commons-logging"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="jsse"/>

    <home nested="util/build"/>
    <jar name="lib/tomcat-util.jar"/>
    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;"/>
  </project>

  <project name="jakarta-tomcat-coyote">
    <package>org.apache.coyote</package>
    <ant basedir="coyote" target="shared.jar">
      <property name="jmx.home" reference="home" project="jmx"/>
      <property name="jmx.jar" project="jmx" path="jmx/lib/jmxri.jar" />
      <depend property="commons-modeler.jar" project="commons-modeler"/>
      <depend property="tomcat-util.jar" project="jakarta-tomcat-util" />
      <depend property="commons-logging.jar" project="commons-logging" id="commons-logging" />
      <property name="util.home" reference="home" project="jakarta-tomcat-util" />
    </ant>

    <depend project="ant" inherit="runtime" />

    <home nested="coyote"/>
    <jar name="build/lib/tomcat-coyote.jar"/>

    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;"/>
  </project>

  <project name="jakarta-tomcat-http11">
    <package>org.apache.coyote.http11</package>
 
    <ant basedir="http11">
      <depend property="jmx.jar" project="jmx" id="jmxri"/>
      <depend property="commons-modeler.jar" project="commons-modeler"/>
      <depend property="tomcat-coyote.jar" project="jakarta-tomcat-coyote"/>
      <depend property="tomcat-util.jar" project="jakarta-tomcat-util"/>
      <depend property="commons-logging.jar" project="commons-logging" id="commons-logging-api" />
    </ant>
    <depend project="ant" inherit="runtime"/>
    <home nested="http11/build" />
    <jar name="lib/tomcat-http11.jar"/>
   <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;"/>
  </project>

  <project name="jakarta-tomcat-coyote-tomcat4">
    <package>org.apache.coyote.tomcat4</package>
    <ant basedir="coyote" target="tomcat4.jar">
      <depend property="jmx.jar" project="jmx" id="jmxri" />
      <depend property="commons-modeler.jar" project="commons-modeler"/>
      <depend property="commons-logging.jar" project="commons-logging"
                id="commons-logging" />
      <property name="catalina.home" reference="home" project="tomcat-catalina" />
      <depend property="tomcat-util.jar" project="jakarta-tomcat-util" />
      <depend property="servlet.jar" project="jakarta-servletapi-4" id="servletapi" />
    </ant>
    <depend project="ant" inherit="runtime" />
    <depend project="tomcat-catalina" />
    <home nested="coyote"/>
    <jar name="build/lib/tomcat4-coyote.jar" />

    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;"/>
  </project>

  <project name="jakarta-tomcat-coyote-tomcat3">
    <package>org.apache.coyote.tomcat3</package>
    <ant basedir="coyote" target="tomcat33.jar">
      <depend property="jmx.jar" project="jmx" id="jmxri" />
      <depend property="commons-modeler.jar" project="commons-modeler"/>
      <depend property="commons-logging.jar" project="commons-logging"
                id="commons-logging" />
      <property name="tomcat33.home" reference="home" project="jakarta-tomcat" />
      <depend property="tomcat-util.jar" project="jakarta-tomcat-util" />
    </ant>
    <depend project="ant" inherit="runtime" />
    <depend project="jakarta-tomcat" />

    <home nested="coyote"/>
    <jar name="build/lib/tomcat33-coyote.jar" />

    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;"/>
  </project>

  <project name="jakarta-tomcat-jk">
    <package>org.apache.jk</package>

    <ant basedir="jk" target="jkjava-tc5">
      <property name="jmx.home" reference="home" project="jmx"/>
      <property name="jmx.jar" project="jmx" path="jmx/lib/jmxri.jar" />
      <property name="jsse.home" reference="home" project="jsse"/>
      <depend property="commons-modeler.jar" project="commons-modeler"/>
      <depend property="tc5-catalina.jar" project="jakarta-tomcat-catalina" id="catalina" />
      <depend property="servlet-api.jar" project="jakarta-servletapi-5-servlet"/>
      <depend property="tomcat-coyote.jar" project="jakarta-tomcat-coyote"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="commons-logging"/>
    <depend project="jmx"/>
    <depend project="jakarta-tomcat-util"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-tomcat-coyote"/>

    <home nested="jk/build"/>
    <jar name="lib/jkconfig.jar"/>
    <jar name="lib/tomcat-jk2.jar"/>
    <jar name="lib/tomcat-jni.jar"/>
    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;"/>
  </project>

  <project name="jakarta-tomcat-jk-ant">
    <ant basedir="jk" target="jkant" >
    </ant>

    <depend project="ant" />
    <depend project="xml-xerces"/>

    <jar name="jk/build/lib/jkant.jar"/>
    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;"/>
  </project>

  <project name="jakarta-tomcat-jk-native-buildconf">
    <script basedir="jk/native" name="buildconf">
    </script>

    <depend project="apache-httpd-make-install" />
    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;">
    </nag>
  </project>

  <project name="jakarta-tomcat-jk-native-configure">
    <configure basedir="jk/native" >
     <!-- Should be id="apxs", but I don't know how to define
          artifacts in the configure/make world -->
      <arg name="--with-apxs" project="apache-httpd-make-install"
              path="dest-@@DATE@@/bin/apxs" />
    </configure>

    <depend project="jakarta-tomcat-jk-native-buildconf" />

    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;">
    </nag>
  </project>

  <project name="jakarta-tomcat-jk-native">
    <make basedir="jk/native" >
    </make>

    <depend project="jakarta-tomcat-jk-native-configure" />

    <nag to="tomcat-dev@jakarta.apache.org"
         from="Bill Barker &lt;billbarker@apache.org&gt;">
    </nag>
  </project>

</module>
