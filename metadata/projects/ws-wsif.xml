<module name="ws-wsif">

  <url href="http://ws.apache.org/wsif/"/>
  <description>
    Web Services Invocation Framework
  </description>

  <cvs repository="ws"/>

  <!-- alias -->

  <project name="xml-axis-wsif">
    <depend project="ws-wsif" inherit="jars"/>
  </project>

  <!-- build -->

  <project name="ws-wsif">
    <package>org.apache.wsif</package>

    <ant basedir="java" target="bindist">
      <depend property="wsdl4j_jar" project="wsdl4j" id="wsdl4j"/>
      <depend property="qname_jar"  project="wsdl4j" id="qname"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="bsf"/>
    <depend project="ejb"/>
    <depend project="javamail"/>
    <depend project="jaf"/>
    <depend project="commons-logging"/>
    <depend project="jms"/>
    <depend project="wsdl4j"/>
    <depend project="ws-axis"/>
    <depend project="ws-soap"/>
    <depend project="j2ee-connector"/>

    <work nested="java/build/classes"/>

    <javadoc nested="java/build/javadocs"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="wsif-dev@ws.apache.org"/>
  </project>

</module>
