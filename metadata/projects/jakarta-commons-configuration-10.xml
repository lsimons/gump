<module name="jakarta-commons-configuration-10" >

  <url href="http://jakarta.apache.org/commons/index.html"/>
  <description>
    Jakarta Commons Configuration 1.0 release
  </description>
  
  <cvs repository="jakarta" module="jakarta-commons/configuration" 
      tag="CONFIGURATION_1_0"/>

 <project name="commons-configuration-10">
    
    <!-- Standard Maven target to produce Javadocs, source -->
    <!-- and binary distributions.                         -->
    
    <ant buildfile="build-gump.xml" target="jar">
      <property name="maven.final.name" value="commons-configuration-1.0"/>
    </ant>
    
    <!-- All Maven projects need Ant and Xerces to build. -->
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
 
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-digester"/>
    <depend project="commons-lang"/>
    <depend project="commons-logging"/>
    <depend project="packaged-dom4j"/>
 
    <work nested="target/classes"/>
    <home nested="target"/>
    <jar name="commons-configuration-1.0.jar"/>
    <javadoc nested="docs/apidocs"/>
 
    <nag from="dIon Gillard &lt;dion@multitask.com.au&gt;"
         to="commons-dev@jakarta.apache.org"/>
  </project>

</module>
