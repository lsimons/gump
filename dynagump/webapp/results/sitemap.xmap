<?xml version="1.0" encoding="UTF-8"?>
    
<map:sitemap xmlns:map="http://apache.org/cocoon/sitemap/1.0">

<!-- =========================== Components ================================ -->

 <map:components>

  <map:serializers default="xhtml">
    <map:serializer logger="sitemap.serializer.chart" mime-type="image/png" name="chart" pool-grow="4" pool-max="32" pool-min="4" src="org.apache.gump.dynagump.ChartSerializer">
      <height>10</height>
      <width>30</width>
      <colors>
        <color id="0" red="0" green="255" blue="0"/>
        <color id="1" red="255" green="0" blue="0"/>
        <color id="2" red="255" green="255" blue="0"/>
      </colors>
      <element namespace-uri="urn:gump:results" name="result"/>
    </map:serializer>
  </map:serializers>

 </map:components>

<!-- =========================== Pipelines ================================= -->

 <map:pipelines>

  <map:pipeline>

   <map:match pattern="">
    <map:generate src="index.xml"/>
    <map:transform src="../stylesheets/page2html.xslt"/>
    <map:serialize type="xhtml"/>
   </map:match>

   <map:match pattern="chart">
    <map:generate src="chart.xsp" type="serverpages"/>
    <map:serialize type="chart"/>
   </map:match>

   <map:match pattern="*">
    <map:generate src="{1}.xsp" type="serverpages"/>
    <map:transform src="../stylesheets/page2html.xslt"/>
    <map:serialize type="xhtml"/>
   </map:match>

  </map:pipeline>

 </map:pipelines>

</map:sitemap>
