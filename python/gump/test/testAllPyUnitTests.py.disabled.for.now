"""
    This module contains a wrapper from the standard unittest package
    to the pyunit.py stuff some of the gump tests use.
"""
import unittest
import gump.test.pyunit
from unittest import TestCase

import warnings
warnings.filterwarnings('ignore')

class AllTestCases(TestCase):
    def testEverything(self):
        gump.test.pyunit.doRun("*")

# used by testrunner.py
def test_suite():
    return unittest.makeSuite(AllTestCases,'test')

if __name__ == '__main__':
    import os
    gumpHome=os.path.abspath(os.path.join(os.getcwd(),'..'))
    os.environ['GUMP_HOME']=gumpHome     
    os.chdir(gumpHome)
    unittest.main()