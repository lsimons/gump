<project name="xml-xalan">

  <cvs repository="xml"/>

  <!--- ================================================= -->
  <!---                     Version 1                     -->
  <!--- ================================================= -->

  <!-- bootstrap -->
  <project name="xml-xalan1">
    <url href="http://xml.apache.org/xalan/index.html"/>
    <description>
      Release 1.x of the Xalan-Java XSLT processor
    </description>

    <ant>
      <property name="bsf.jar"
         reference="jarpath" id="bsf" project="bsf"/>
      <property name="xerces.jar"
         reference="jarpath" id="xerces" project="xml-xerces"/>
    </ant>

    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="bsf"/>

    <home nested="build"/>
    <jar  name="xalan.jar"/>
  </project>

  <project name="dist-xalan1">
    <url href="http://xml.apache.org/xalan/index.html"/>
    <description>
      Release 1.x of the Xalan-Java XSLT processor
    </description>

    <ant target="dist">
      <property name="bsf.jar"
         reference="jarpath" id="bsf" project="bsf"/>
      <property name="xerces.jar"
         reference="jarpath" id="xerces" project="xml-xerces"/>
    </ant>

    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="xml-xalan1"/>
    <depend project="xml-site"/>
    <depend project="xml-stylebook"/>
    <depend project="bsf"/>
    <depend project="jakarta-servletapi"/>
  </project>

  <!--- ================================================= -->
  <!---                     Version 2                     -->
  <!--- ================================================= -->

  <project name="xml-xalan2">
    <url href="http://xml.apache.org/xalan-j/index.html"/>
    <description>
      Release 2.x of the Xalan-Java XSLT processor
    </description>

    <ant basedir="java"/>

    <depend project="bootstrap-ant"/>
    <depend project="xml-xerces"/>

    <home nested="java/build"/>
    <jar  name="xalan.jar"/>
  </project>

  <project name="dist-xalan2">
    <url href="http://xml.apache.org/xalan-j/index.html"/>
    <description>
      Release 2.x of the Xalan-Java XSLT processor
    </description>

    <ant basedir="java" target="dist">
      <property name="bsf.jar"
         reference="jarpath" id="bsf" project="bsf"/>
      <property name="xerces.jar"
         reference="jarpath" id="xerces" project="xml-xerces"/>
    </ant>

    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-servletapi"/>
    <depend project="xml-xalan2"/>
    <depend project="xml-stylebook2"/>
    <option project="bsf"/>

    <home nested="java/build/xalan-j_2_0_1"/>
    <jar  name="bin/xalan.jar"/>
  </project>

  <project name="xml-xalan2-smoketest">
    <description>
      Smoke tests
    </description>

    <ant basedir="java" target="smoketest"/>

    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="dist-xalan2"/>
    <work nested="test/java/build"/>
  </project>

</project>
