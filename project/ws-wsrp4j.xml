<module name="ws-wsrp4j">

  <url href="http://ws.apache.org/wsrp4j/"/>
  <description>
    Open Source implementation of OASIS WSRP
  </description>

  <cvs repository="ws"/>

  <!-- build -->
  <project name="ws-wsrp4j">
    <package>org.apache.ws.wsrp4j</package>

    <ant basedir="build" target="all">
      <property name="env.ANT_HOME" reference="home" project="ant"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="castor"/>
    <depend project="junit"/>
    <depend project="jakarta-log4j"/>
    <depend project="jakarta-regexp"/>
    <depend project="servletapi"/>
    <depend project="ws-axis"/>
    <depend project="my-pluto"/>
    <depend project="commons-discovery"/>
    <depend project="commons-logging"/>
    <depend project="tt-bytecode"/>
    <depend project="wsdl4j"/>
    <depend project="xml-apis"/>
    <depend project="xml-xerces"/>

    <work nested="build/ant/lib/ForeachTask.jar"/>

    <home nested="bin/lib"/>
    <jar name="wsrp4j-consumer-0.3.jar"/>
    <jar name="wsrp4j-producer-0.3.jar"/>
    <jar name="wsrp4j-shared-0.3.jar"/>
    <jar name="wsrp4j-swing-consumer-0.3.jar"/>

    <license name="LICENSE"/>

    <javadoc nested="docs/apidocs"/>

    <nag from="Davanum Srinivas &lt;dims@yahoo.com&gt;"
         to="wsrp4j-dev@ws.apache.org">
      <regexp  subject="Build Failure - wsrp4j"/>
      <regexp pattern="/timed out/" subject="Build timed out - wsrp4j"/>
    </nag>
  </project>
  
  <project name="my-pluto">
    <url href="http://jakarta.apache.org/pluto/"/>
    <description>Reference implementation for JSR168 Portlet container</description>
    <jar name="lib/shared/pluto-1.0.jar"/>
    <jar name="provider/pluto/war/WEB-INF/lib/pluto-portal-impl.jar"/>
    <jar name="lib/shared/portlet-api.jar"/>
  </project>
  <project name="tt-bytecode">
  	<jar name="lib/tt-bytecode.jar"/>
  </project>
  <project name="servletapi">
  	<jar name="lib/build_only/servlet.jar"/>
  </project>
</module>
