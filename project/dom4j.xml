<module name="dom4j">

  <url href="http://www.dom4j.org"/>
  <description>
    The flexible XML framework for Java
  </description>
  <redistributable/>

  <cvs repository="sourceforge" host-prefix="cvs.dom4j" dir="dom4j"/>
  
  <project name="dom4j">
    <package>org.dom4j</package>

    <ant target="gump">
      <property name="jaxen.src" project="jaxen-from-packaged-dom4j"
                path="src/java/main"/>
    </ant>
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>
    <depend project="xml-xalan2"/>
    <depend project="tranquilo"/>
    <depend project="xpp"/>
    <depend project="jaxen-from-packaged-dom4j"/>
    <depend project="xmldb"/>
    <depend project="msv"/>
    <depend project="relaxng"/>
    <depend project="xml-fop" inherit="runtime"/>
    <work nested="lib/saxpath.jar"/>
    <jar name="build/dom4j.jar" id="dom4j"/>
    <license name="LICENSE.txt"/>
  </project>

  <project name="xpp">
    <package>sxt</package>
    <package>xpp</package>

    <url href="http://www.extreme.indiana.edu/soap/xpp/"/>
    <jar name="lib/PullParser11.jar"/>
    <jar name="lib/PullParser2.jar"/>
  </project>

</module>
