<module name="jakarta-ecs">

  <url href="http://jakarta.apache.org/ecs/index.html"/>
  <description>
    Element Construction Set
  </description>

  <cvs repository="jakarta"/>
  
  <project name="jakarta-ecs">
    <package>org.apache.ecs</package>

    <ant basedir="build" buildfile="build-ecs.xml" target="binary-package">
      <property name="version" value="@@DATE@@"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-regexp"/>
    <home nested="ecs-@@DATE@@"/>
    <jar name="ecs-@@DATE@@.jar"/>
    <javadoc nested="ecs-@@DATE@@/docs/apidocs"/>
    <nag from="Jon Stevens &lt;jon@latchkey.com&gt;"
         to="ecs-dev@jakarta.apache.org"/>
  </project>

</module>
