<?xml version="1.0" encoding="UTF-8"?>

<module name="directory-naming">
  <description>Apache Directory Naming Component</description>
  <url href="http://incubator.apache.org/directory/naming/"/>
  
  <svn repository="apache-incubator-svn" dir="directory/naming/trunk/"/>
  
  <project name="directory-naming">
    <ant buildfile="build.xml" target="jar">
      <property name="DATE_STAMP" value="@@DATE@@"/>
    </ant>
    <package>org.apache.directory.naming</package>
    <depend project="ant" inherit="runtime"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-dbcp"/>
    <depend project="commons-digester"/>
    <depend project="commons-lang"/>
    <depend project="commons-logging"/>
    <depend project="commons-pool"/>
    <depend project="javamail"/>
    <depend project="junit"/>
    <depend project="mx4j"/>
    <depend project="xml-xerces"/>
    <option project="hsqldb"/>
    <work nested="core/target/classes"/>
    <work nested="core/target/test-classes"/>
    <work nested="factory/target/classes"/>
    <work nested="factory/target/test-classes"/>
    <jar name="core/dist/directory-naming-core-@@DATE@@.jar"/>
    <jar name="factory/dist/directory-naming-factory-@@DATE@@.jar"/>
    <nag to="directory-dev@incubator.apache.org" 
    	from="directory-naming development &lt;directory-dev@incubator.apache.org&gt;"/>
  </project>
   
</module>

