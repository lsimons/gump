<module name="jakarta-pluto">

  <url href="http://jakarta.apache.org/pluto/"/>
  <description>
    JSR168 Container
  </description>

  <cvs repository="jakarta"/>

  <!-- build -->
  <project name="jakarta-pluto">
    <package>org.apache.pluto</package>

    <mkdir dir="temp/api/classes/"/>
    <mkdir dir="temp/container/classes/"/>

    <ant basedir="build" target="all">
      <property name="env.ANT_HOME" reference="home" project="ant"/>
      <property name="final.api.name" value="portlet-api-@@DATE@@"/>
      <property name="final.portal.name" value="pluto-portal-impl-@@DATE@@"/>
      <property name="version" value="@@DATE@@"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="castor"/>
    <depend project="commons-logging"/>
    <depend project="junit"/>
    <depend project="jakarta-regexp"/>
    <depend project="jakarta-servletapi-5-servlet"/>
    <depend project="jakarta-servletapi-5-jsp"/>
    <depend project="xml-apis"/>
    <depend project="xml-xerces"/>

    <work nested="temp/api/classes/"/>
    <work nested="temp/container/classes/"/>
    <work nested="build/ant/lib/ForeachTask.jar"/>

    <home nested="temp"/>
    <jar name="container/pluto-@@DATE@@.jar" id="container"/>
    <jar name="api/portlet-api-@@DATE@@.jar" id="api"/>
    <jar name="portal/pluto-portal-impl-@@DATE@@.jar" id="portal"/>

    <license name="LICENSE"/>

    <javadoc nested="docs/apidocs"/>

    <nag from="Julie MacNaught &lt;jmacna@apache.org&gt;"
         to="pluto-dev@jakarta.apache.org">
      <regexp  subject="Build Failure - pluto"/>
      <regexp pattern="/timed out/" subject="Build timed out - pluto"/>
    </nag>
  </project>
  

</module>
