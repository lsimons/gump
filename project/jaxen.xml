<module name="jaxen">

  <url href="http://www.jaxen.org"/>
  <description>
    The flexible XML framework for Java
  </description>

  <cvs repository="sourceforge" host-prefix="cvs.jaxen" dir="jaxen"/>
  
  <project name="jaxen">
    <package>org.jaxen</package>

    <ant/>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="xml-xalan2"/>
    <depend project="saxpath" runtime="true"/>
    <option project="jdom"/>

    <home nested="build"/>
    <jar name="jaxen-full.jar"/>
    <javadoc nested="build/doc/javadoc"/>

    <nag from="Sam Ruby &lt;rubys@apache.org&gt;"
         to="turbine-maven-dev@jakarta.apache.org"
         subject="Build failure - Jaxen">
      <regexp pattern="/maven/"/>
    </nag>
  </project>

  <project name="saxpath">
    <jar name="lib/saxpath.jar"/>
  </project>

</module>
