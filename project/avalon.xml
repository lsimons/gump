<module name="avalon">

  <url href="http://avalon.apache.org/"/>
  <description>
    Avalon framework
  </description>

  <cvs repository="avalon"/>

  <!-- deprecated! -->
  <project name="jakarta-avalon">
    <depend project="avalon" inherit="jars"/>
  </project>

  <project name="avalon">
    <package>org.apache.avalon.framework</package>

    <ant>
      <depend property="xerces.jar"  project="xml-xerces" id="parser"/>
      <depend property="junit.jar"   project="junit"/>
    </ant>
    <depend project="ant" inherit="runtime"/>
    <!-- not for jar generation <depend project="xml-xalan2"/>-->
    <option project="jakarta-log4j"/>
    <option project="avalon-logkit"/>
    <option project="commons-logging"/>

    <home nested="target/lib"/>
    <jar name="avalon-framework.jar"/>

    <javadoc nested="target/javadocs" module="avalon"/>
    <license name="LICENSE.txt"/>

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="dev@avalon.apache.org"/>
  </project>

    <!-- deprecated! -->
    <project name="jakarta-avalon-dist">
      <depend project="avalon-dist" inherit="jars"/>
    </project>

    <project name="avalon-junitreport">
        <ant target="test-report">
          <depend property="xerces.jar"  project="xml-xerces" id="parser"/>
          <depend property="junit.jar"   project="junit"/>
        </ant>

        <depend project="avalon" inherit="all"/>

        <work nested="target/classes"/>

        <junitreport nested="target/docs/test" module="avalon"/>

        <nag from="Gump Integration Build &lt;dev@avalon.apache.org&gt;"
                to="dev@avalon.apache.org"/>
    </project>

  <project name="avalon-dist">
    <ant target="dist">
      <depend property="xerces.jar"  project="xml-xerces" id="parser"/>
      <depend property="logkit.jar"  project="avalon-logkit"/>
      <depend property="junit.jar"   project="junit"/>
    </ant>
    <depend project="ant" inherit="runtime"/>
    <!--uses forrest now <depend project="xml-cocoon2"/>-->
    <depend project="xml-forrest"/>
    <depend project="avalon"/>
    <depend project="dist-avalon-logkit"/>
    <depend project="xml-xalan2"/>
    <!-- not anymore <depend project="xml-batik"/>
    <depend project="xml-fop"/>
    <depend project="bsf"/>
    <depend project="rhino"/>
    <depend project="avalon-excalibur"/>
    <depend project="avalon-site"/>
    <depend project="resolver"/>-->

    <license name="LICENSE.txt"/>
  </project>

    <!-- deprecated! -->
    <project name="jakarta-avalon-exceptionutil">
      <depend project="avalon-exceptionutil" inherit="jars"/>
    </project>

  <project name="avalon-exceptionutil">
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <ant target="jar-exceptionutil"/>
    <home nested="target/lib"/>
    <jar name="exceptionutil.jar"/>
    <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="dev@avalon.apache.org"/>

    <license name="LICENSE.txt"/>
  </project>

</module>
