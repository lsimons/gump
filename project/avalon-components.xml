<module name="avalon-components">

  <url href="http://avalon.apache.org/"/>
  <description>
    A set of cause-grain components.
  </description>

  <cvs repository="avalon"/>
  
  <project name="avalon-components">
    <package>org.apache.avalon.cornerstone</package>

    <ant />

    <depend project="avalon-framework" runtime="true" id="combined"/>
    <depend project="avalon-logkit" runtime="true"/>
    <depend project="xml-xerces" id="parser" runtime="true"/>
    <depend project="junit"/>
    <depend project="excalibur-datasource" runtime="true"/>
    <depend project="excalibur-i18n" runtime="true"/>
    <depend project="excalibur-thread" runtime="true"/>
    <depend project="jakarta-ant" inherit="runtime"/>
    <option project="excalibur-event"/>
    <option project="jakarta-bcel"/>
    <option project="jsse"/>

    <!-- buildtime dependencies -->
    <depend project="junit"/>
    <depend project="excalibur-datasource"/>
    <depend project="excalibur-i18n"/>
    <depend project="excalibur-thread"/>
    <option project="excalibur-event"/>
    <depend project="ant" inherit="runtime"/>
    <option project="jakarta-bcel"/>
    <option project="jsse"/>

    <work nested="build/classes"/>

    <home nested="build/lib"/>
    <jar name="cornerstone.jar"/>
    <javadoc nested="build/docs/api" module="avalon"/>
    <license name="LICENSE.txt"/>

    <nag from="Gump Integration Build &lt;dev@avalon.apache.org&gt;"
            to="dev@avalon.apache.org"/>
  </project>

</module>


