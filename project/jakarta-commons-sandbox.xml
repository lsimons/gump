<module name="jakarta-commons-sandbox">

  <description>
    Jakarta commons sandbox
  </description>

  <cvs repository="jakarta"/>

  <project name="commons-attributes">
    <package>org.apache.commons.attributes</package>
    <description>Commons Attributes</description>
    <ant basedir="attributes" target="dist">
      <property name="final.name"  value="commons-attributes-@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="commons-logging"/>
    <depend project="phoenix-qdox" runtime="true"/>
    <depend project="junit"/>

    <work nested="attributes/target/classes"/>
    <work nested="attributes/target/test-classes"/>

    <jar name="attributes/target/commons-attributes-@@DATE@@.jar"/>
    <javadoc nested="attributes/dist/docs/api"/>
 
    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="commons-dev@jakarta.apache.org"/>
  </project>

  <project name="commons-codec">
    <package>org.apache.commons.codec</package>
    <description>Commons Encoding/Decoding Package</description>
    <ant basedir="codec" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <jar name="codec/dist/commons-codec-@@DATE@@.jar"/>
    <javadoc nested="codec/dist/docs/api"/>
  </project>

  <project name="commons-configuration">
    
    <!-- Standard Maven target to produce Javadocs, source -->
    <!-- and binary distributions.                         -->
    
    <ant basedir="configuration" buildfile="build-gump.xml" target="jar">
      <property name="maven.final.name" value="commons-configuration-@@DATE@@"/>
    </ant>
    
    <!-- All Maven projects need Ant and Xerces to build. -->
    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
 
    <depend project="commons-collections"/>
    <depend project="commons-lang"/>
    <depend project="commons-logging"/>
    <depend project="dom4j"/>
 
    <work nested="target/classes"/>
    <home nested="configuration/target"/>
    <jar name="commons-configuration-@@DATE@@.jar"/>
    <javadoc nested="docs/apidocs"/>
 
    <nag from="dIon Gillard &lt;dion@multitask.com.au&gt;"
         to="commons-dev@jakarta.apache.org"/>
  </project>

  <project name="commons-email">
