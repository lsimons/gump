<module name="jakarta-commons-sandbox">

  <description>
    Jakarta commons sandbox
  </description>

  <cvs repository="jakarta"/>

  <project name="commons-altrmi">
    <package>org.apache.commons.altrmi</package>
    <description>Alternate RMI Package</description>
    <ant basedir="altrmi" target="dist">
      <depend property="avalon-framework.jar" project="jakarta-avalon"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="beepcore"/>
    <home nested="altrmi/dist"/>
    <jar name="commons-altrmi-common.jar"/>
    <jar name="commons-altrmi-client-interfaces.jar"/>
    <jar name="commons-altrmi-client-impl.jar"/>
    <jar name="commons-altrmi-server-interfaces.jar"/>
    <jar name="commons-altrmi-server-impl.jar"/>
    <jar name="commons-altrmi-generator.jar"/>
    <javadoc nested="altrmi/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>
  
  <project name="commons-codec">
    <package>org.apache.commons.codec</package>
    <description>Commons Encoding/Decoding Package</description>
    <ant basedir="codec" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <jar name="codec/dist/commons-codec.jar"/>
    <javadoc nested="codec/dist/docs/api"/>
  </project>

  <project name="commons-betwixt">
    <package>org.apache.commons.betwixt</package>
    <description>Commons Betwixt Package</description>
    <url href="http://jakarta.apache.org/commons/betwixt.html"/>
    <ant basedir="betwixt" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
      <depend property="commons-digester.jar" project="commons-digester"/>
      <depend property="commons-collections.jar" project="commons-collections"/>
      <depend property="commons-beanutils.jar" project="commons-beanutils"/>
      <depend property="junit.jar"  project="junit"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="commons-logging"/>
    <jar name="betwixt/dist/commons-betwixt-@@DATE@@.jar"/>
    <javadoc nested="betwixt/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-email">
    <package>org.apache.commons.email</package>
    <description>Commons Email Package</description>
    <ant basedir="email" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
      <depend property="javamail.jar" project="javamail" />
      <depend property="jaf.jar" project="jaf" />
      <depend property="commons-util.jar" project="commons-util"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <jar name="email/dist/commons-email-@@DATE@@.jar"/>
    <javadoc nested="email/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-fileupload">
    <package>org.apache.commons.fileupload</package>
    <description>Commons File Upload Package</description>
    <ant basedir="fileupload" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-servletapi"/>
    <depend project="jaf"/>
    <jar name="fileupload/dist/commons-fileupload-@@DATE@@.jar"/>
    <javadoc nested="fileupload/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="John McNally &lt;jmcnally@collab.net&gt;"/>
  </project>

  <project name="commons-http">
    <package>org.apache.commons.http</package>
    <description>Commons HTTP Utility Package</description>
    <ant basedir="http" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <jar name="http/dist/commons-http.jar"/>
    <javadoc nested="http/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-io">
    <package>org.apache.commons.io</package>
    <description>Commons I/O Utility Package</description>
    <ant basedir="io" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <jar name="io/dist/commons-io.jar"/>
    <javadoc nested="io/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-jjar">
    <package>org.apache.commons.jjar</package>
    <description>Jakarta Jar Archive Repository</description>
    <ant basedir="jjar" target="dist">
      <depend property="minml2.jar"  project="minml2"/>
      <depend property="junit.jar"   project="junit"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <work nested="jjar/classes"/>
    <work nested="jjar/tests"/>
    <jar name="jjar/dist/jjar.jar"/>
    <javadoc nested="jjar/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-lang">
    <package>org.apache.commons.lang</package>
    <description>utilities for the classes that are in java.lang's hierarchy</description>
    <ant basedir="lang" target="dist">
      <property name="component.version" value="@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <jar name="lang/dist/commons-lang-@@DATE@@.jar"/>
    <javadoc nested="io/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-messenger">
    <package>org.apache.commons.messenger</package>
    <description>A web based JMS framework</description>
    <url href="http://jakarta.apache.org/commons/messenger.html"/>
    <ant basedir="messenger" target="dist">
      <depend property="commons-digester.jar" project="commons-digester"/>
      <depend property="commons-collections.jar" project="commons-collections"/>
      <depend property="commons-beanutils.jar" project="commons-beanutils"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="commons-logging"/>
    <depend project="jakarta-servletapi-4"/>
    <depend project="jms"/>
    <jar name="messenger/dist/commons-messenger.jar"/>
    <javadoc nested="messenger/dist/doc/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-modeler">
    <package>org.apache.commons.modeler</package>
    <description>Modeler MBeans</description>
    <ant basedir="modeler" target="dist">
    </ant>

    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="commons-digester"/>
    <depend project="commons-logging"/>
    <depend project="jmx"/>

    <jar name="modeler/dist/commons-modeler.jar"/>
    <javadoc nested="modeler/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-services">
    <package>org.apache.commons.services</package>
    <description>Basic Services Architecture</description>
    <ant basedir="services" target="dist"/>

    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-digester"/>
    <depend project="commons-logging"/>
    <depend project="commons-pool"/>

    <jar name="services/dist/commons-services.jar"/>
    <javadoc nested="services/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-threading">
    <package>org.apache.commons.threading</package>
    <description>Commons Threading Utility Package</description>
    <ant basedir="threading" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <jar name="threading/dist/commons-threading-@@DATE@@.jar"/>
    <javadoc nested="threading/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-util">
    <package>org.apache.commons.util</package>
    <description>Commons Utility Package</description>
    <ant basedir="util" target="dist">
      <property name="component.version"  value="@@DATE@@"/>
      <property name="minml2.jar" reference="jarpath" project="minml2"/>
      <depend property="junit.jar"  project="junit"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="jakarta-servletapi"/>
    <depend project="xml-xerces"/>
    <depend project="commons-lang"/>
    <jar name="util/dist/commons-util-@@DATE@@.jar"/>
    <javadoc nested="util/dist/docs/api"/>

    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="minml2">
    <url href="http://www.wilson.co.uk/xml/minml2.htm"/>
    <description>
      Namespace aware minimal XML parser
    </description>

    <jar name="jjar/lib/MinML2.jar"/>
  </project>

</module>
