    <work nested="target/classes"/>
    <home nested="xo/target"/>
    <jar name="commons-xo-@@DATE@@.jar"/>
    <javadoc nested="docs/apidocs"/>
    
   
    <nag to="commons-dev@jakarta.apache.org"
         from="dIon Gillard &lt;dion@multitask.com.au&gt;"/>
  </project>
  
  <project name="minml2">
    <url href="http://www.wilson.co.uk/xml/minml2.htm"/>
    <description>
      Namespace aware minimal XML parser
    </description>

    <jar name="jjar/lib/MinML2.jar"/>
  </project>

</module>
