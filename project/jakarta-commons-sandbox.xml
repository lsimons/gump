    <nag to="commons-dev@jakarta.apache.org"
         from="Ted Husted &lt;ted@husted.com&gt;"/>
  </project>

  <project name="commons-net">
    <mkdir dir="net/target/classes"/>
    <mkdir dir="net/target/test-classes"/>
