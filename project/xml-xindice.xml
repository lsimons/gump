<module name="xml-xindice">

  <url href="http://xml.apache.org/xindice/"/>
  <description>
    native XML database
  </description>

  <cvs repository="xml"/>
  
  <project name="xml-xindice">
    <package>org.apache.xindice</package>

    <mdir dir="build/classes"/>
    <ant>
      <property name="project.version" value="@@DATE@@"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="xmldb"/>
    <depend project="junitperf"/>
    <depend project="xml-xalan2"/>
    <depend project="ws-xmlrpc"/>
    <depend project="commons-logging"/>
    <depend project="jakarta-servletapi"/>
    <depend project="junit"/>
    <depend project="junit-addons"/>
    <work nested="build/classes"/>

    <home nested="dist"/>
    <jar name="xindice-@@DATE@@.jar"/>

    <license name="LICENSE"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="xindice-dev@xml.apache.org"/>
  </project>

  <project name="xmldb">
    <url href="http://www.xmldb.org/xapi/index.html"/>
    <home nested="java/lib"/>
    <jar name="xmldb-api-20030701.jar"/>
    <jar name="xmldb-api-sdk-20030701.jar"/>
    <jar name="xmldb-common-20030701.jar"/>
    <jar name="xmldb-xupdate-20040205.jar"/>
  </project>

</module>
