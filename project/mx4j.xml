<module name="mx4j">

  <url href="http://mx4j.sourceforge.net/"/>
  <description>
    OpenSource implementation of a JMX agent
  </description>
  <redistributable/>

  <cvs repository="sourceforge"  dir="mx4j"/>
  
  <nag from="Simone Bordet &lt;simone.bordet@hp.com&gt;"
         to="mx4j-devel@lists.sourceforge.net"/>

  <project name="mx4j">
    <package>mx4j</package>
    <package>javax.management</package>

    <ant basedir="build" target="compile.rjmx"/>
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="xmlunit"/>
    <depend project="logging-log4j"/>
    <depend project="jakarta-bcel"/>
    <depend project="junit"/>
    <depend project="commons-codec" />
    <depend project="commons-logging" />
    <depend project="ws-axis"/>
    <option project="javamail"/>
    <option project="jsse"/>
    <option project="jaf"/>
    <option project="jython"/>
    <work nested="classes/core"/>
 
    <home nested="dist"/>
    <jar name="lib/mx4j-jmx.jar"/>
    <jar name="lib/mx4j-impl.jar"/>
    <jar name="lib/mx4j.jar"/>

    <jar name="lib/mx4j-rjmx.jar"/>
    <jar name="lib/mx4j-rimpl.jar"/>
    <jar name="lib/mx4j-remote.jar"/>
    <license name="src/docs/english/license.xml"/>
  </project>

  <project name="mx4j-tools">
    <package>mx4j</package>
    <package>javax.management</package>

    <ant basedir="build" target="release"/>
    <depend project="xml-xalan2"/>
    <depend project="mx4j" inherit="all"/>

    <work nested="classes/core"/>
    <work nested="classes/tools"/>
    <depend project="jetty"/>
 
    <home nested="dist"/>
    <jar name="lib/mx4j-tools.jar"/>
    <license name="src/docs/english/license.xml"/>
  </project>

  <project name="mx4j-tools-from-packaged-jetty">
    <package>mx4j</package>
    <package>javax.management</package>

    <ant basedir="build" target="release"/>
    <depend project="mx4j" inherit="all"/>

    <work nested="classes/core"/>
    <work nested="classes/tools"/>
    <depend project="xml-xalan2"/>
    <depend project="packaged-jetty"/>
 
    <home nested="dist"/>
    <jar name="lib/mx4j-tools.jar" id="tools"/>
    <license name="src/docs/english/license.xml"/>
  </project>

</module>
