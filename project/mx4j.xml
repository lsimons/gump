<module name="mx4j">

  <url href="http://mx4j.sourceforge.net/"/>
  <description>
    OpenSource implementation of a JMX agent
  </description>

  <cvs repository="sourceforge" host-prefix="cvs.mx4j" dir="mx4j"/>

  <project name="mx4j">
    <package>mx4j</package>
    <package>javax.management</package>

    <ant basedir="build" target="test"/>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="xmlunit"/>
    <depend project="jakarta-log4j"/>
    <depend project="junit"/>
    <depend project="saxon"/>
    <option project="javamail"/>
    <option project="jsse"/>
    <option project="jaf"/>
    <work nested="classes/core"/>
    <work nested="classes/examples"/>
    <work nested="classes/test"/>
    <work nested="classes/tools"/>
 
    <home nested="dist"/>
    <jar name="lib/openjmx.jar"/>
    <jar name="lib/openjmx-tools.jar"/>
  </project>

  <project name="mx4j-release">
    <ant basedir="build" target="release"/>
    <depend project="mx4j" inherit="all"/>
    <depend project="xdoclet"/>
    <work nested="classes/core"/>
    <work nested="classes/examples"/>
    <work nested="classes/test"/>
    <work nested="classes/tools"/>
  </project>

  <project name="saxon">
    <package>com.icl.saxon</package>
    <url href="http://mx4j.sourceforge.net/"/>
    <description>
      XSLT processor developed by Michael Kay
    </description>
    <jar name="lib/saxon.jar"/>
  </project>
</module>
