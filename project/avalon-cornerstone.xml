<module name="avalon-cornerstone">

  <url href="http://avalon.apache.org/"/>
  <description>
    Set of default services for Avalon/Phoenix
  </description>

  <cvs repository="avalon"/>

    <!-- deprecated! -->
    <project name="jakarta-avalon-cornerstone">
      <depend project="avalon-cornerstone" inherit="jars"/>
    </project>

  <project name="avalon-cornerstone">
    <package>org.apache.avalon.cornerstone</package>

    <ant />

    <depend project="avalon"/>
    <depend project="avalon-logkit"/>
    <depend project="xml-xerces" id="parser"/>
    <depend project="junit"/>
    <depend project="excalibur-io"/>
    <depend project="excalibur-datasource"/>
    <depend project="excalibur-i18n"/>
    <depend project="excalibur-thread"/>
    <depend project="excalibur-threadcontext"/>
    <depend project="avalon-phoenix" ids="client,metagenerate"/>
    <depend project="ant" inherit="runtime"/>
    <depend project="jakarta-velocity" inherit="runtime"/>

    <option project="excalibur-event"/>
    <option project="jakarta-bcel"/>
    <option project="jsse"/>

    <work nested="build/classes"/>

    <home nested="build/lib"/>
    <jar name="cornerstone.jar"/>

    <javadoc nested="docs/api" module="avalon"/>
    <license name="LICENSE.txt"/>

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="dev@avalon.apache.org"/>
  </project>

</module>

