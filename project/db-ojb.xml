<module name="db-ojb">
  <description>
    ObjectRelationalBridge
  </description>

  <cvs repository="db"/>
  <project name="bootstrap-ojb">
    <package>org.apache.ojb</package>

    <mkdir dir="target/classes" />
    <ant target="snapshot">
      <property name="archive" value="jakarta-ojb-@@DATE@@" />
    </ant>

    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="xml-xerces"/>

    <depend project="antlr"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-dbcp"/>
    <depend project="commons-lang"/>
    <depend project="commons-logging"/>
    <depend project="commons-pool"/>
    <depend project="hsqldb"/>
    <depend project="j2ee-connector" />
    <depend project="jaas" />
    <depend project="jakarta-avalon"/>
    <depend project="jakarta-velocity"/>
    <depend project="excalibur-component"/>
    <depend project="jakarta-avalon-logkit"/>
    <depend project="jakarta-log4j"/>
    <depend project="jakarta-regexp"/>
    <depend project="jakarta-servletapi"/>
    <depend project="jdbc"/>
    <depend project="jdo"/>
    <depend project="jmx"/>
    <depend project="jta"/>
    <depend project="junit"/>
    <depend project="crossdb"/>

    <depend project="ojb-jboss" />
    <depend project="ojb-torque" />
    <depend project="ojb-jcs" />

    <!-- needed by test sources -->
    <depend project="ejb" />

    <!-- needed for documentation -->
    <depend project="xml-xalan2"/>

    <work nested="target/classes" />

    <jar name="dist/jakarta-ojb-@@DATE@@.jar" />
    <javadoc nested="target/doc/api" />

    <nag from="Stefan Bodewig &lt;bodewig@apache.org&gt;"
         to="ojb-dev@db.apache.org"/>
  </project>

  <project name="db-ojb">
    <package>org.apache.ojb</package>

    <mkdir dir="target/classes" />
    <ant target="snapshot">
      <property name="archive" value="jakarta-ojb-@@DATE@@" />
    </ant>

    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="xml-xerces"/>

    <depend project="antlr"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-collections"/>
    <depend project="commons-dbcp"/>
    <depend project="commons-lang"/>
    <depend project="commons-logging"/>
    <depend project="commons-pool"/>
    <depend project="hsqldb"/>
    <depend project="j2ee-connector" />
    <depend project="jaas" />
    <depend project="jakarta-avalon"/>
    <depend project="jakarta-velocity"/>
    <depend project="excalibur-component"/>
    <depend project="jakarta-avalon-logkit"/>
    <depend project="jakarta-log4j"/>
    <depend project="jakarta-regexp"/>
    <depend project="jakarta-servletapi"/>
    <depend project="jdbc"/>
    <depend project="jdo"/>
    <depend project="jmx"/>
    <depend project="jta"/>
    <depend project="junit"/>
    <depend project="crossdb"/>

    <depend project="ojb-jboss" />
    <depend project="jakarta-turbine-torque" />
    <depend project="jakarta-turbine-jcs" />

    <!-- needed by test sources -->
    <depend project="ejb" />

    <!-- needed for documentation -->
    <depend project="xml-xalan2"/>

    <work nested="target/classes" />

    <jar name="dist/jakarta-ojb-@@DATE@@.jar" />
    <javadoc nested="target/doc/api" />

    <nag from="Stefan Bodewig &lt;bodewig@apache.org&gt;"
         to="ojb-dev@db.apache.org"/>
  </project>

  <project name="test-ojb">
    <ant target="junit" />

    <depend project="jakarta-ojb" inherit="all" />
    <work nested="target/classestest" />

    <nag from="Stefan Bodewig &lt;bodewig@apache.org&gt;"
         to="ojb-dev@db.apache.org"
         subject="Test Failure - OJB" />
  </project>

  <project name="ojb-jboss">
    <jar name="lib/jboss-common.jar" />
    <jar name="lib/jboss-system.jar" />
  </project>
  
  <project name="ojb-torque">
    <jar name="lib/torque-3.0.jar" />
  </project>
  
  <project name="ojb-jcs">
    <jar name="lib/jcs.jar" />
  </project>
  
  <!-- Mavenized build, http://sourceforge.net/projects/crossdb/ -->
  <project name="crossdb">
    <jar name="lib/crossdb.jar" />
  </project>
  
  <!-- CVS is temporarily down, this seems to be the latest released version
  <project name="hsqldb">
    <jar name="lib/hsqldb.jar" />
  </project>
  -->

</module>
