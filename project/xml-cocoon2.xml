<project name="xml-cocoon2">

  <url href="http://xml.apache.org/cocoon/cocoon2.html"/>
  <description>
    Java publishing framework - version 2
  </description>

  <cvs repository="xml" module="xml-cocoon2"/>

  <ant target="dist">
    <property name="logkit.jar"
       reference="jarpath" id="logkit" project="jakarta-avalon-logkit"/>
    <property name="avalonapi.jar"
       reference="jarpath" id="avalonapi" project="jakarta-avalon"/>
  </ant>

  <depend project="jakarta-ant"/>
  <depend project="xml-xerces"/>
  <depend project="xml-xalan2"/>
  <depend project="xml-batik"/>
  <option project="jakarta-servletapi-4"/>
  <depend project="jakarta-avalon-logkit"/>
  <depend project="jakarta-avalon"/>
  <option project="xml-fop"/>
  <depend project="jakarta-regexp"/>
  <depend project="jdom"/>
  <option project="xt"/>
  <option project="xml-batik"/>
  <option project="rhino"/>
  <option project="jstyle"/>
  <depend project="maybeupload"/>
  <depend project="bsf"/>
  <depend project="jakarta-velocity"/>
  <option project="jtidy"/>
  <option project="phpservlt"/>

  <project name="jstyle">
    <url href="http://astyle.sourceforge.net/"/>
    <description>
      Predecessor to Artistic Style?
    </description>
    <jar name="lib/jstyle.jar"/>
  </project>

  <project name="xt">
    <url href="http://www.jclark.com/xml/xt.html"/>
    <description>
      XSL Transformation
    </description>
    <jar name="lib/xt.jar"/>
  </project>

  <project name="maybeupload">
    <url href="http://www.weft.co.uk/library/maybeupload/"/>
    <description>
      Maybe Upload
    </description>
    <jar name="lib/maybeupload.jar"/>
  </project>

</project>
