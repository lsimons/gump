<module name="bsf">

  <url href="http://oss.software.ibm.com/developerworks/projects/bsf"/>
  <description>
    Bean Scripting Framework
  </description>

  <cvs repository="devworks" dir="bsf"/>
  
  <project name="bsf">
    <package>com.ibm.bsf</package>

    <ant target="samples"/>

    <depend project="xml-xerces"/>
    <depend project="jakarta-ant" inherit="runtime"/>
    <work nested="build/classes"/>

    <home nested="build"/>
    <jar  name="lib/bsf.jar"/>

    <nag to="bsf-discussion@dwoss.lotus.com"
         from="Sam Ruby &lt;rubys@us.ibm.com&gt;"/>
  </project>

  <project name="dist-bsf">
    <ant target="dist"/>

    <depend project="xml-xerces"/>
    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="bsf"/>
    <option project="rhino"/>
    <option project="jython"/>

    <home nested="build"/>
    <jar  name="lib/bsf.jar"/>
    <javadoc nested="build/javadocs"/>
  </project>

</module>
