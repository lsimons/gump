<project name="jakarta-tomcat-4.1">

  <description>
    Servlet 2.3 and JSP 1.2 Reference Implementation
  </description>

  <cvs repository="jakarta"/>

  <ant target="dist">
    <property name="catalina.jaxp.home"
       reference="home" project="jaxp1.1"/>
    <property name="catalina.jaxp.parser.jar"
       reference="jar" id="parser" project="jaxp1.1"/>

    <property name="jasper.jaxp.home"
       reference="home" project="jaxp1.1"/>
    <property name="jasper.jaxp.parser.jar"
       reference="jar" id="parser" project="jaxp1.1"/>

    <property name="servletapi.home"
       reference="home" project="jakarta-servletapi-4"/>

    <property name="jsse.home" reference="home" project="jsse"/>

    <property name="jmx.home" reference="home" project="jmx"/>

    <property name="regexp.home"
       reference="home" project="jakarta-regexp"/>
    <property name="regexp.jar"
       reference="jarpath" id="regexp" project="jakarta-regexp"/>
  </ant>

  <depend project="xml-xerces"/>
  <depend project="jsse"/>
  <depend project="jmx"/>
  <depend project="jakarta-regexp"/>
  <depend project="jakarta-ant"/>
  <depend project="jakarta-servletapi-4"/>
  <option project="framework"/>
</project>
