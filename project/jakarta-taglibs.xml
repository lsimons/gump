<module name="jakarta-taglibs">

  <url href="http://jakarta.apache.org/taglibs/index.html"/>
  <description>
    JSP Taglibs
  </description>

  <cvs repository="jakarta"/>
  
  <project name="jakarta-taglibs">
    <ant target="dist">
      <property name="base.dir" reference="home" project="jakarta-taglibs"/>
      <property name="build.dir" path="build"/>
      <property name="dist.dir" path="dist"/>
      <depend property="xerces.jar" project="xml-xerces"/>
      <depend property="crimson.jar" project="xml-xerces"/>
      <depend property="jaxp.jar" project="xml-xerces"/>
      <depend property="xalan1.jar" project="xml-xalan1-compat"/>
      <depend property="xalanj1compat.jar" project="xml-xalan1-compat"/>
      <depend property="xalan.jar" project="xml-xalan2"/>
      <depend property="servlet.jar"   project="jakarta-servletapi-4"/>
      <depend property="servlet23.jar" project="jakarta-servletapi-4"/>
      <depend property="log4j-core.jar" project="jakarta-log4j"/>
      <depend property="dom4j.jar"          project="dom4j"/>
      <depend property="jakarta-oro2.jar"   project="jakarta-oro"/>
      <depend property="jdbc2_0-stdext.jar" project="jdbc"/>
      <depend property="jxpath.jar" project="commons-jxpath"/>
      <depend property="js.jar" project="rhino"/>
    </ant>

    <depend project="jakarta-ant"/>
    <option project="bsf"/>
    <option project="javamail"/>
    <depend project="jaf"/>
    <work nested="build/jsptl/jsptl"/>

    <javadoc nested="dist/doc/doc" project="xml-xerces2">
      <description dir="application-doc">application</description>
      <description dir="benchmark-doc">benchmark</description>
      <description dir="datetime-doc">datetime</description>
      <description dir="dbtags-doc">dbtags</description>
      <description dir="i18n-doc">i18n</description>
      <description dir="input-doc">input</description>
      <description dir="io-doc">io</description>
      <description dir="jndi-doc">jndi</description>
      <description dir="log-doc">log</description>
      <description dir="mailer-doc">mailer</description>
      <description dir="page-doc">page</description>
      <description dir="random-doc">random</description>
      <description dir="regexp-doc">regexp</description>
      <description dir="request-doc">request</description>
      <description dir="response-doc">response</description>
      <description dir="scrape-doc">scrape</description>
      <description dir="session-doc">session</description>
      <description dir="string-doc">string</description>
      <description dir="xtags-doc">xtags</description>
    </javadoc>
  </project>

</module>
