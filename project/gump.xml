<module name="jakarta-gump">

  <url href="http://jakarta.apache.org/gump/"/>
  <description>
    Cross project build tool
  </description>

  <cvs repository="jakarta"/>

  <project name="gump">
    <ant target="all">
    	<property name="workspace" value="gump.xml"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="xml-xalan2"/>
    <work nested="classes"/>
    <javadoc nested="javadocs"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;">
      <regexp to="gump@jakarta.apache.org"/>
      <regexp pattern="/Dropping project/" subject="Project(s) dropped"
              to="gump@jakarta.apache.org"/>
      <regexp pattern="/Dropping project \w+-block/" subject="Project(s) dropped"
	      to="cocoon-dev@xml.apache.org"/>
    </nag>
  </project>
  
</module>
