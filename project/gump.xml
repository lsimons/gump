<module name="gump">

  <url href="http://jakarta.apache.org/gump/"/>
  <description>
    Cross project build tool
  </description>

  <project name="gump">
    <ant target="all">
      <property name="site2.dir" reference="srcdir" project="jakarta-site2"/>
      <property name="batik.dir" reference="srcdir" project="xml-batik"/>
    </ant>

    <depend project="jakarta-ant" inherit="runtime"/>
    <option project="jakarta-velocity" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="xml-xalan2"/>
    <option project="xml-batik"/>
    <option project="xml-batik-rasterizer"/>
    <work nested="classes"/>
    <javadoc nested="javadocs"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;">
      <regexp to="gump@jakarta.apache.org"/>
      <regexp pattern="/Dropping project/" subject="Project(s) dropped"
              to="gump@jakarta.apache.org"/>
    </nag>
  </project>
</module>
