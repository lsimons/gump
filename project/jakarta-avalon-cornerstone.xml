<project name="jakarta-avalon-cornerstone">

  <url href="http://jakarta.apache.org/avalon/"/>
  <description>
    Set of default services for Avalon/Phoenix
  </description>

  <cvs repository="jakarta"/>

  <ant target="dist">
    <property name="xerces.jar"
       reference="jarpath" id="parser" project="xml-xerces"/>
    <property name="logkit.jar"
       reference="jarpath" id="logkit" project="jakarta-avalon-logkit"/>
    <property name="avalon-framework.jar"
       reference="jarpath" id="avalon-framework" project="jakarta-avalon"/>
    <property name="avalon-excalibur.jar"
       reference="jarpath" id="avalon-excalibur" project="jakarta-avalon"/>
    <property name="avalon-scratchpad.jar"
       reference="jarpath" id="avalon-scratchpad" project="jakarta-avalon"/>
    <property name="phoenix-client.jar"
       reference="jarpath" id="client" project="jakarta-avalon-phoenix"/>
  </ant>

  <depend project="jakarta-ant"/>
  <depend project="xml-xerces"/>
  <depend project="jakarta-avalon"/>
  <depend project="jakarta-avalon-logkit"/>
  <depend project="jakarta-avalon-testlet"/>
  <depend project="jakarta-avalon-phoenix"/>
  <option project="jsse"/>
  <depend project="xml-stylebook2"/>
  <depend project="xml-xalan2"/>

  <home nested="build/lib"/>
  <jar name="cornerstone.bar"/>

</project>

