<module name="jrefactory">

  <url href="http://jrefactory.sourceforge.net/"/>
  <description>
    A refactoring tool for the Java programming language.
  </description>

  <package>org.acm.seguin</package>

  <cvs repository="sourceforge" host-prefix="cvs.JRefactory" dir="jrefactory" 
       module="JRefactory"/>
  
  <project name="jrefactory">
    <ant target="jar"/>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>
    <work nested="ant.build/classes"/>
    <work nested="test/classes"/>
    <jar name="ant.build/lib/jrefactory.jar"/>
  </project>

  <project name="jrefactory-pretty">
    <ant target="pretty">
      <property name="version" value="0.0.0"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>
    <work nested="ant.build/classes"/>
    <jar name="ant.build/lib/PrettyPrinter-0.0.0.jar"/>
  </project>

</module>
