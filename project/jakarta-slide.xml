<module name="jakarta-slide">

  <url href="http://jakarta.apache.org/slide/index.html"/>
  <description>
    Content Management System based on WebDAV technology
  </description>

  <cvs repository="jakarta"/>
  
  <project name="jakarta-slide">
    <package>org.apache.slide</package>
    <package>org.apache.webdav</package>

    <ant target="full-dist">
      <property name="ant.jar" reference="jarpath" project="dist-ant" 
                id="ant" />
      <depend   property="jaxp.jar" project="jaxp" id="jaxp-api"/>
      <depend   property="xmlparser.jar" project="xml-xerces" id="parser"/>
      <depend   property="xmlapi.jar" project="xml-apis" />
      <property name="jmx.jar" reference="jarpath" project="jmx" id="jmxri"/>
      <depend name="jdom.jar" project="jdom"/>
      <property name="struts.lib" project="jakarta-struts" path="dist/lib"/>
      <depend property="jta.jar"     project="jta"/>
      <depend property="junit.jar"   project="junit"/>
      <depend property="log4j.jar"   project="jakarta-log4j"/>
      <depend property="servlet.jar" project="jakarta-servletapi-4"/>
      <property name="jstl.lib" project="jakarta-taglibs" 
                path="dist/standard"/>
      <property name="taglibs-standard.lib" project="jakarta-taglibs" 
                path="dist/standard"/>
      <depend property="antlr.jar" project="antlr" id="antlr" />
      <depend property="antlr-tools.jar" project="antlr" id="antlr-tools" />
      <depend property="jdbc20ext.jar" project="jdbc" />
      <depend property="commons-modeler.jar" project="commons-modeler"/>
      <depend property="jndi.jar" project="jndi"/>
      <property name="catalina.dist" project="jakarta-tomcat-4.0"
                path="dist"/>
      <property name="version" value="@@DATE@@" />
      <depend property="commons-httpclient.jar" project="commons-httpclient"/>
    </ant>

    <depend project="dist-ant" />
    <depend project="xml-xerces"/>
    <depend project="xml-xalan2"/>
    <option project="jmx"/>
    <depend project="jakarta-tomcat-4.0"/>
    <depend project="jakarta-struts"/>
    <depend project="jakarta-oro"/>
    <option project="jakarta-taglibs" ids="jstl standard"/>

    <work nested="build/classes"/>
    <work nested="build/client/classes"/>

    <home nested="dist"/>

    <jar name="client/lib/slide-anttasks.jar" id="client-anttasks"/>
    <jar name="client/lib/slide-client.jar" id="client"/>
    <jar name="client/lib/slide-swing.jar" id="client-swing"/>
    <jar name="client/lib/slide-webdavlib.jar" id="client-webdavlib"/>

    <jar name="slide/lib/slide-kernel.jar" id="kernel"/>
    <jar name="slide/lib/slide-roles.jar" id="roles"/>
    <jar name="slide/lib/slide-stores.jar" id="stores"/>
    <jar name="slide/lib/slide-webdavservlet.jar" id="webdavservlet"/>

    <jar name="slide/lib/slide-taglib-common.jar" id="taglib-common"/>
    <jar name="slide/lib/slide-taglib-jstl.jar" id="taglib-jstl"/>
    <jar name="slide/lib/slide-taglib-struts.jar" id="taglib-struts"/>

    <jar name="slide/wrappers/slide-catalinawrapper.jar" id="catalina-wrapper"/>
    <jar name="slide/wrappers/slide-jmxwrapper.jar" id="jmx-wrapper"/>
    <jar name="slide/wrappers/slide-jndiwrapper.jar" id="jndi-wrapper"/>
    <jar name="slide/wrappers/slide-log4jwrapper.jar" id="log4j-wrapper"/>

    <javadoc nested="dist/doc">
      <description dir="clientjavadoc">WebDAV Client </description>
      <description dir="javadoc">Slide API</description>
    </javadoc>

    <nag to="slide-dev@jakarta.apache.org"
         from="Craig McClanahan &lt;craigmcc@apache.org&gt;"/>
  </project>

  <project name="antlr">
    <url href="http://www.antlr.org/"/>
    <description>
      ANother Tool for Language Recognition
    </description>

    <jar name="lib/antlr-tools.jar" id="antlr-tools"/>
    <jar name="lib/antlr.jar" id="antlr"/>
  </project>
</module>
