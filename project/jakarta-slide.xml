<project name="jakarta-slide">

  <url href="http://jakarta.apache.org/slide/index.html"/>
  <description>
    Content Management System based on WebDAV technology
  </description>

  <cvs repository="jakarta"/>

  <ant target="full-dist">
    <property name="ant.home" reference="home" project="jakarta-ant"/>
    <property name="jaxp.home" reference="home" project="jaxp1.1"/>
    <property name="jmx.home" reference="home" project="jmx"/>
    <property name="jta.jar" reference="jarpath" id="jta" project="jta"/>
    <property name="junit.jar" reference="jarpath" id="junit" project="junit"/>
    <property name="log4j.jar" reference="jarpath" id="log4j" 
              project="jakarta-log4j"/>
    <property name="servlet.jar" reference="jarpath" id="servlet" 
              project="jakarta-servletapi-4"/>
  </ant>

  <depend project="jakarta-ant"/>
  <depend project="xml-xerces"/>
  <depend project="xml-xalan2"/>
  <depend project="jakarta-servletapi-4"/>
  <depend project="jta"/>
  <option project="jmx"/>
  <option project="junit"/>
  <option project="jakarta-log4j"/>
  <option project="framework"/>
  <option project="jakarta-tomcat-4.0"/>

  <work nested="build/classes"/>
  <work nested="build/client/classes"/>

  <home nested="dist"/>
  <jar  name="client/lib/webdavlib.jar"/>
  <jar  name="lib/manager.jar"/>
  <jar  name="lib/roles.jar"/>
  <jar  name="lib/slide.jar"/>
  <jar  name="lib/slidestores.jar"/>
  <jar  name="lib/webdav.jar"/>

</project>
