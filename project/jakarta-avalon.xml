<project name="jakarta-avalon">

  <url href="http://jakarta.apache.org/avalon/"/>
  <description>
    Avalon framework
  </description>

  <cvs repository="jakarta"/>

  <ant target="dist">
    <property name="xerces.jar"
       reference="jarpath" id="parser" project="xml-xerces"/>
    <property name="logkit.jar"
       reference="jarpath" id="logkit" project="jakarta-avalon-logkit"/>
  </ant>

  <depend project="jakarta-ant"/>
  <depend project="jakarta-avalon-logkit"/>
  <depend project="jakarta-avalon-testlet"/>
  <depend project="xml-xerces"/>
  <depend project="xml-stylebook2"/>

  <home nested="build/lib"/>
  <jar name="avalon-framework.jar" id="avalon-framework"/>

  <project name="jakarta-avalon-exceptionutil">
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <ant target="jar-exceptionutil"/>
    <home nested="build/lib"/>
    <jar name="exceptionutil.jar"/>
  </project>
</project>
