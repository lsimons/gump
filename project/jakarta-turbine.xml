<project name="jakarta-turbine">

  <url href="http://jakarta.apache.org/turbine/"/>
  <description>
    Servlet based framework
  </description>

  <cvs repository="jakarta"/>

  <ant basedir="build" buildfile="build-turbine.xml" target="package"/>

  <depend project="jakarta-ant"/>
  <depend project="xml-xerces"/>
  <depend project="xml-xalan1"/>
  <depend project="jakarta-servletapi"/>
  <depend project="jakarta-regexp"/>
  <depend project="jakarta-log4j"/>
  <depend project="jakarta-ecs"/>
  <depend project="jakarta-velocity"/>
  <depend project="webmacro"/>
  <option project="freemarker"/>
  <depend project="village"/>
  <depend project="castor"/>
  <depend project="javamail"/>
  <depend project="xmlrpc"/>
  <depend project="jaf"/>
  <depend project="jdbc"/>
  <option project="jta"/> <!-- needed for javadoc purposes only -->

  <home nested="turbine-2.1-dev-unreleased"/>
  <jar name="turbine-2.1-dev-unreleased.jar"/>

  <project name="torque">
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-turbine"/>
    <ant basedir="build" buildfile="build-torque.xml">
      <property name="build.dir" value="../bin"/>
      <property name="build.dest" value="../bin/classes"/>
    </ant>
    <home nested="bin/torque/torque"/>
    <jar name="lib/torque.jar"/>
  </project>

  <project name="webmacro">
    <url href="http://www.webmacro.org/"/>
    <description>
      HTML template engine
    </description>
    <jar name="lib/webmacro-0.94.jar"/>
  </project>

  <project name="xmlrpc">
    <url href="http://classic.helma.at/hannes/xmlrpc/"/>
    <description>
      XML Remote Procedure Call
    </description>
    <jar name="lib/xmlrpc.jar"/>
  </project>

</project>
