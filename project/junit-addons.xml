<module name="junit-addons">

  <url href="http://junit-addons.sourceforge.net/"/>
  <description>
    Various JUnit addons and helper classes.
  </description>

  <cvs repository="sourceforge" host-prefix="cvs.junit-addons" dir="junit-addons"/>
  
  <redistributable/>

  <project name="junit-addons">

    <ant target="release">
      <property name="project.name" value="junit-addons"/>
      <property name="project.version" value="@@DATE@@"/>
    </ant>

    <depend project="ant" inherit="runtime"/>
    <depend project="xml-apis"/>
    <depend project="xml-xerces"/>
    <depend project="jdom"/>
    <depend project="junit"/>
    <depend project="jaxen"/>

    <work nested="build/classes"/>
    <work nested="build/classes-example"/>
    <jar name="dist/junit-addons-@@DATE@@.jar"/>
    <javadoc nested="dist/api"/>

    <license name="LICENSE"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="xindice-dev@xml.apache.org"/>
  </project>

</module>
