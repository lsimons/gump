<module name="xml-fop">

  <url href="http://xml.apache.org/fop/index.html"/>
  <description>
    XSL:FO (Formatting Objects) processor
  </description>

  <cvs repository="xml"/>

  <!-- task definitions used by the build process -->

  <project name="fop-buildtools">
    <package>org.apache.fop.tools</package>
    <ant buildfile="buildtools.xml"/>
    <depend project="xml-xerces"/>
    <depend project="ant" inherit="runtime"/>
    <depend project="avalon-logkit"/>
    <depend project="avalon"/>
    <option project="xml-xalan2"/>
    <jar name="lib/buildtools.jar"/>
    <license name="LICENSE"/>
  </project>

  <!-- main project -->

  <project name="xml-fop">
    <package>org.apache.fop</package>

    <ant target="dist"/>
    <depend project="xml-xerces"/>
    <depend project="xml-xalan2"/>
    <depend project="ant" inherit="runtime"/>
    <depend project="xml-batik"/>
    <depend project="avalon-logkit" runtime="true"/>
    <depend project="avalon" runtime="true"/>
    <depend project="bsf"/>
    <depend project="fop-buildtools"/>
    <depend project="jfor"/>
    <depend project="jakarta-servletapi"/>

    <home nested="build"/>
    <jar  name="fop.jar"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;" to="fop-dev@xml.apache.org"/>
  </project>

</module>
