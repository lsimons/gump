<module name="krysalis-ant-tasks">

  <url href="http://www.krysalis.org/index.shtml"/>
  
  <description>
    Ant tasks and build utilities.
  </description>

  <cvs repository="sourceforge" host-prefix="cvs.krysalis" dir="krysalis"/>
  
  <project name="krysalis-ant-tasks">
    <package>org.krysalis.ant</package>

    <ant target="gump"/>

    <depend project="jakarta-ant"/>
    <depend project="jakarta-ant-embed"/>    
    <depend project="xml-xerces"/>
    <depend project="commons-vfs"/>
    <depend project="commons-logging"/>
    <depend project="jakarta-regexp"/>
    <depend project="jtidy"/>
    <depend project="izpress"/>    
    <depend project="krysalis-ruper"/>
        
    <jar name="dist/krysalis-ant-tasks-@@DATE@@.jar"/>
        
    <nag to="krysalis-developers@lists.sourceforge.net"
         from="Nicola Ken Barozzi &lt;nicolaken@apache.org&gt;"/>    
    
  </project>
  
  <project name="krysalis-ant-tasks-test">

    <ant target="test-jsdoc"/>

    <depend project="krysalis-ant-tasks" inherit="all"/>
    <depend project="junit"/>
    
    <work nested="build/classes"/>
    <work nested="build/test"/>
          
    <nag to="krysalis-developers@lists.sourceforge.net"
         from="Nicola Ken Barozzi &lt;nicolaken@apache.org&gt;"/>    
    
  </project>  

  <project name="izpress">

    <home nested="lib/core"/>
    <jar name="IzPress.jar"/>
      
    <nag to="krysalis-developers@lists.sourceforge.net"
         from="Nicola Ken Barozzi &lt;nicolaken@apache.org&gt;"/>    
    
  </project>  
  

</module>
