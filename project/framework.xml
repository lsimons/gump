<project name="framework">

  <url href="http://java.apache.org/framework/"/>
  <description>
    Avalon framework
  </description>

  <cvs repository="jservpub"/>

  <ant/>

  <depend project="jakarta-ant"/>
  <depend project="jakarta-avalon-logkit"/>
  <depend project="jakarta-avalon-testlet"/>
  <depend project="xml-xerces"/>
  <depend project="jsse"/>
  <depend project="kawa"/>

  <home nested="build/lib"/>
  <jar name="avalonapi.jar"/>

  <!-- Anybody want to contribute an ant build.xml to Kawa ;-) -->
  <project name="kawa">
    <url href="http://www.gnu.org/software/kawa/"/>
    <jar name="lib/bytecode.jar"/>
  </project>

  <project name="jakarta-avalon-clutil">
    <depend project="jakarta-ant"/>
    <depend project="jakarta-avalon-logkit"/>
    <depend project="xml-xerces"/>
    <ant target="jar-clutil"/>
    <home nested="build/lib"/>
    <jar name="clutil.jar"/>
  </project>

  <project name="cornerstone">
    <depend project="framework"/>
    <home nested="build/lib"/>
    <jar name="cornerstone.bar"/>
  </project>
</project>
