<module name="jakarta-velocity-tools">

  <url href="http://jakarta.apache.org/velocity/index.html"/>
  <description>
    Velocity-Tools project
  </description>

  <cvs repository="jakarta"/>

  <project name="velocity-tools">
    <package>org.apache.velocity.tools</package>

    <ant target="all">
      <property name="project.version" value="@@DATE@@"/>
    </ant>
    <depend project="ant" inherit="runtime"/>
    <depend project="jakarta-servletapi-4"/>
    <depend project="jakarta-struts"/>
    <depend project="jakarta-velocity" inherit="runtime"/>
    <depend project="jakarta-velocity-dvsl" inherit="runtime"/>
    <depend project="jdbc"/>
    <depend project="xml-xerces"/>
    <jar name="velocity-tools-@@DATE@@.jar"/>
    <nag to="velocity-dev@jakarta.apache.org"
         from="Geir Magnusson Jr. &lt;geirm@apache.org&gt;"/>
  </project>

</module>
