<module name="jakarta-avalon-phoenix">

  <url href="http://jakarta.apache.org/avalon/"/>
  <description>
    The Avalon Application Server Kernel
  </description>

  <cvs repository="jakarta"/>

  <project name="jakarta-avalon-phoenix">
    <package>org.apache.avalon.phoenix</package>

    <ant target="jars">
      <property name="checkstyle.failOnError" value="true"/>
      <property name="jakarta-site.dir" project="jakarta-site2"
                reference="home" />
      <depend property="mx4j.jar" project="mx4j" id="jmx"/>
      <depend property="mx4j-tools.jar" project="mx4j" id="tools"/>
    </ant>

    <depend property="xerces.jar" project="xml-xerces" id="parser"/>
    <depend property="logkit.jar" project="jakarta-avalon-logkit"/>
    <depend property="framework.jar" project="jakarta-avalon"/>
    <depend project="bsf"/>
    <depend project="excalibur-configuration" runtime="true"/>
    <depend project="excalibur-converter" runtime="true"/>
    <depend project="excalibur-io" runtime="true"/>
    <depend project="excalibur-info" runtime="true"/>
    <depend project="excalibur-cli" runtime="true"/>
    <depend project="excalibur-extension" runtime="true"/>
    <depend project="excalibur-threadcontext" runtime="true"/>
    <depend project="excalibur-thread" runtime="true"/>
    <depend project="excalibur-pool" runtime="true"/>
    <depend project="excalibur-loader" runtime="true"/>
    <depend project="excalibur-logger" runtime="true"/>
    <depend project="excalibur-i18n" runtime="true"/>
    <depend project="excalibur-baxter" runtime="true"/>
    <depend project="excalibur-policy" runtime="true"/>
    <depend project="excalibur-monitor" runtime="true"/>
    <depend project="excalibur-util" runtime="true"/>
    <depend project="jakarta-ant"/>
    <depend project="mx4j" runtime="true"/>
    <depend project="xml-stylebook2"/>
    <depend project="xml-xalan2"/>
    <depend project="dist-bsf"/>
    <depend project="rhino"/>
    <depend project="phoenix-qdox" runtime="true"/>
    <depend project="jarv" runtime="true"/>
    <depend project="jakarta-site2" inherit="all" />
    <option project="jakarta-servletapi-4"/>
    <depend project="junit"/>

    <work nested="build/classes"/>

    <home nested="build/lib"/>
    <jar name="phoenix-client.jar"/>
    <jar name="phoenix-metagenerate.jar"/>
    <javadoc nested="build/javadocs" module="jakarta-avalon"/>

    <nag>
    <regexp pattern="/^$/" from="peter@apache.org" 
            to="avalon-phoenix-dev@jakarta.apache.org"
            subject="PRE-REQ FAILED for jakarta-avalon-phoenix"/>
    </nag>
    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="avalon-dev@jakarta.apache.org"/>
  </project>

  <project name="phoenix-qdox">
    <jar name="lib/qdox-1.1.jar"/>
  </project>
  
  <project name="jarv">
    <jar name="lib/jing/isorelax.jar"/>
  </project>
</module>
