<module name="xml-commons">

  <description>
    XML commons($Revision: 1.19 $) externally defined standards - DOM,SAX,JAXP; plus xml utilities
  </description>

  <cvs repository="xml"/>
  
  <project name="xml-apis">
    <package>javax.xml.parsers</package>
    <package>javax.xml.transform</package>
    <package>org.apache.xmlcommons</package>
    <package>org.w3c.dom</package>
    <package>org.xml.sax</package>
    <ant basedir="java/external"/>
    <depend project="bootstrap-ant"/>
    <depend project="xml-xerces"/>
    <home nested="java/external/build"/>
    <jar name="xml-apis.jar" type="boot"/>
    <license name="LICENSE.txt"/>
  </project>

  <project name="xml-commons-which">
    <package>org.apache.env</package>
    <ant basedir="java" buildfile="which.xml" target="jar" />
    <depend project="xml-xerces" />
    <depend project="bootstrap-ant"/>
    <home nested="java/build"/>
    <jar name="which.jar"/>
  </project>

  <project name="xml-commons-resolver">
    <description>
      Catalog based entity and URI resolution
    </description>
    <package>org.apache.xml.resolver</package>
    <ant basedir="java" buildfile="resolver.xml" target="gump"/>
    <depend project="xml-xerces"/>
    <depend project="xml-apis"/>
    <depend project="ant" inherit="runtime"/>
    <home nested="java/build"/>
    <jar name="resolver.jar"/>
    <javadoc nested="java/build/docs/javadocs/"/>
  </project>
</module>
