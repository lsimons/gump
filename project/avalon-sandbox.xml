<module name="avalon-sandbox">

    <url href="http://jakarta.apache.org/avalon/excalibur"/>
    <description>
      A repository of reusable components
    </description>

    <cvs repository="jakarta"/>

    <project name="excalibur-containerkit">
        <package>org.apache.excalibur.containerkit</package>

        <ant basedir="containerkit">
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="do.checkstyle" value="true"/>
            <property name="skip.dependencies" value="true"/>
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <option project="checkstyle" inherit="runtime"/>
        <depend project="excalibur-info" runtime="true" inherit="runtime"/>
        <depend project="xml-xerces"/>
        <depend project="xml-xalan2"/>
        <work nested="containerkit/build/classes"/>

        <home nested="containerkit"/>
        <jar name="build/lib/excalibur-containerkit-@@DATE@@.jar"/>

        <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="avalon-dev@jakarta.apache.org"/>
    </project>

</module>