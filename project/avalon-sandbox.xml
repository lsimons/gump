<module name="avalon-sandbox">

    <url href="http://jakarta.apache.org/avalon/excalibur"/>
    <description>
      A repository of reusable components
    </description>

    <cvs repository="jakarta"/>

    <project name="avalon-lifecycle">
        <package>org.apache.avalon.lifecycle</package>

        <ant basedir="lifecycle">
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="jakarta-site.dir" project="jakarta-site2" 
                      reference="home" />
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <depend project="jakarta-avalon" runtime="true"/>
        <depend project="xml-xerces"/>
        <work nested="lifecycle/build/classes"/>

        <home nested="lifecycle"/>
        <jar name="build/lib/avalon-lifecycle-@@DATE@@.jar"/>

        <nag from="Gump Integration Build &lt;avalon-dev@jakarta.apache.org&gt;"
             to="avalon-dev@jakarta.apache.org"/>
    </project>

    <project name="avalon-meta">
        <package>org.apache.avalon.meta</package>

        <ant basedir="meta">
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="do.checkstyle" value="false"/>
            <property name="skip.dependencies" value="true"/>
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <depend project="jakarta-avalon" runtime="true"/>
        <depend project="excalibur-i18n" runtime="true"/>
        <depend project="excalibur-configuration" runtime="true"/>
        <depend project="xml-xerces"/>
        <depend project="xml-xalan2"/>
        <work nested="meta/build/classes"/>

        <home nested="meta"/>
        <jar name="build/lib/avalon-meta-@@DATE@@.jar"/>

        <nag from="Gump Integration Build &lt;avalon-dev@jakarta.apache.org&gt;"
             to="avalon-dev@jakarta.apache.org"/>
    </project>

    <project name="avalon-assembly">
        <package>org.apache.avalon.assembly</package>

        <ant basedir="assembly" target="jar">
            <depend property="logkit.jar" project="jakarta-avalon-logkit" runtime="true"/>
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="do.checkstyle" value="false"/>
            <property name="skip.dependencies" value="true"/>
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <depend project="jakarta-avalon" runtime="true"/>
        <depend project="avalon-lifecycle" runtime="true"/>
        <depend project="avalon-meta" runtime="true"/>
        <depend project="excalibur-i18n" runtime="true"/>
        <depend project="excalibur-configuration" runtime="true"/>
        <depend project="excalibur-logger" runtime="true"/>
        <depend project="excalibur-extension" runtime="true"/>
        <depend project="excalibur-event" runtime="true"/>
        <depend project="excalibur-collections" runtime="true"/>
        <depend project="excalibur-thread" runtime="true"/>
        <depend project="xml-xerces"/>
        <depend project="xml-xalan2"/>
        <work nested="assembly/build/classes"/>

        <home nested="assembly"/>
        <jar name="build/lib/avalon-assembly-@@DATE@@.jar"/>

        <nag from="Gump Integration Build &lt;avalon-dev@jakarta.apache.org&gt;"
             to="avalon-dev@jakarta.apache.org"/>
    </project>

    <project name="avalon-merlin">
        <package>org.apache.avalon.merlin</package>

        <ant basedir="assembly" target="jar">
            <depend property="logkit.jar" project="jakarta-avalon-logkit" runtime="true"/>
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="do.checkstyle" value="false"/>
            <property name="skip.dependencies" value="true"/>
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <depend project="jakarta-avalon" runtime="true"/>
        <depend project="avalon-lifecycle" runtime="true"/>
        <depend project="avalon-meta" runtime="true"/>
        <depend project="avalon-assembly" runtime="true"/>
        <depend project="excalibur-i18n" runtime="true"/>
        <depend project="excalibur-configuration" runtime="true"/>
        <depend project="excalibur-logger" runtime="true"/>
        <depend project="excalibur-extension" runtime="true"/>
        <depend project="excalibur-event" runtime="true"/>
        <depend project="excalibur-collections" runtime="true"/>
        <depend project="excalibur-thread" runtime="true"/>
        <depend project="excalibur-threadcontext" runtime="true"/>
        <depend project="excalibur-pool" runtime="true"/>
        <depend project="xml-xerces"/>
        <depend project="xml-xalan2"/>
        <work nested="merlin/build/classes"/>

        <home nested="merlin"/>
        <jar name="build/lib/avalon-merlin-@@DATE@@.jar"/>

        <nag from="Gump Integration Build &lt;avalon-dev@jakarta.apache.org&gt;"
             to="avalon-dev@jakarta.apache.org"/>
    </project>


    <project name="excalibur-containerkit">
        <package>org.apache.excalibur.containerkit</package>

        <ant basedir="containerkit">
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="do.checkstyle" value="true"/>
            <property name="skip.dependencies" value="true"/>
            <property name="jakarta-site.dir" project="jakarta-site2" 
                      reference="home" />
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <option project="checkstyle" inherit="runtime"/>
        <depend project="excalibur-info" runtime="true" inherit="runtime"/>
        <depend project="xml-xerces"/>
        <depend project="xml-xalan2"/>
        <work nested="containerkit/build/classes"/>

        <home nested="containerkit"/>
        <jar name="build/lib/excalibur-containerkit-@@DATE@@.jar"/>

        <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="excalibur-dev@jakarta.apache.org"/>
    </project>

    <project name="excalibur-info">
        <package>org.apache.avalon.framework.info</package>

        <ant basedir="info">
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="do.checkstyle" value="true"/>
            <property name="skip.dependencies" value="true"/>
            <property name="jakarta-site.dir" project="jakarta-site2" 
                      reference="home" />
        </ant>

        <depend project="jakarta-ant" inherit="runtime"/>
        <option project="checkstyle" inherit="runtime"/>
        <depend project="junit"/>
	<depend project="excalibur-qdox" runtime="true" inherit="runtime"/>
        <depend project="jakarta-avalon" runtime="true"/>
        <depend project="excalibur-i18n" runtime="true"/>
        <depend project="xml-xerces"/>
        <depend project="xml-xalan2"/>
        <work nested="info/build/classes"/>

        <home nested="info"/>
        <jar name="build/lib/sandbox-info-@@DATE@@.jar"/>

        <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="avalon-dev@jakarta.apache.org"/>
    </project>

    <project name="excalibur-qdox">
        <jar name="info/lib/qdox-20021116-patched.jar"/>
    </project>

</module>
