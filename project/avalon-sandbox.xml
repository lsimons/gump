<module name="avalon-sandbox">

    <url href="http://avalon.apache.org/"/>
    <description>
      A repository of alpha-stage reusable components
    </description>

    <cvs repository="avalon"/>

    <project name="avalon-cache">
        <package>org.apache.avalon.excalibur.cache</package>

        <ant basedir="cache">
            <property name="version" value="@@DATE@@"/>
            <property name="junit.failonerror" value="true"/>
            <property name="do.checkstyle" value="true"/>
            <property name="skip.dependencies" value="true"/>
        </ant>

        <depend project="ant" inherit="runtime"/>
        <option project="checkstyle" inherit="runtime"/>
        <depend project="junit"/>
        <depend project="avalon-framework" runtime="true" id="combined"/>
        <depend project="xml-xerces"/>
        <depend project="xml-xalan2"/>
        <work nested="cache/build/classes"/>

        <home nested="cache"/>
        <jar name="build/lib/avalon-cache-@@DATE@@.jar"/>

        <nag from="Gump Integration Build &lt;dev@avalon.apache.org&gt;"
                to="dev@avalon.apache.org"/>
    </project>

    <project name="avalon-framework-sandbox">
        <package>org.apache.avalon</package>
        <ant target="dist" basedir="framework">
            <property name="project.version" value="@@DATE@@"></property>
        </ant>

        <depend project="ant" inherit="runtime"/>
        <depend project="xml-xalan2"/>
        <depend project="xml-xerces"/>
        <depend runtime="true" project="junit"/>

        <depend runtime="true" project="jakarta-log4j"/>
        <depend runtime="true" project="avalon-logkit"/>

        <work nested="framework/api/target/classes"/>
        <work nested="framework/impl/target/classes"/>
        <!--<work nested="framework/api/target/test-classes"/>-->
        <work nested="framework/impl/target/test-classes"/>

        <home nested="framework"/>
        <jar name="target/avalon-framework-@@DATE@@.jar" id="combined"/>
        <jar name="target/avalon-framework-api-@@DATE@@.jar" id="api"/>
        <jar name="target/avalon-framework-impl-@@DATE@@.jar" id="impl"/>
        <javadoc nested="framework/target/docs/apidocs"/>
        <junitreport nested="framework/target/docs/junitreports"/>

        <nag to="dev@avalon.apache.org" from="Gump Integration Build &lt;dev@avalon.apache.org&gt;"/>
    </project>

</module>
