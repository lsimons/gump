<module name="xml-axis">

  <url href="http://xml.apache.org/axis/"/>
  <description>
    Simple Object Access Protocol
  </description>

  <cvs repository="xml"/>

  <!-- build -->

  <project name="xml-axis">
    <package>org.apache.axis</package>

    <ant basedir="java" target="all">
      <depend name="wsdl4j.jar" project="wsdl4j"/>
      <depend name="log4j-core.jar" project="jakarta-log4j"/>
      <depend name="clutil.jar" project="excalibur-cli"/>
    </ant>

    <depend project="xml-xerces"/>
    <depend project="jakarta-oro"/>
    <depend project="jakarta-ant"/>
    <depend project="commons-logging"/>
    <depend project="jakarta-servletapi"/>
    <depend project="tt-bytecode"/>
    <option project="junit"/>
    <option project="jaf"/>
    <option project="javamail"/>
    <option project="xml-security" inherit="runtime"/>
    <work nested="java/build/classes"/>

    <home nested="java/build"/>
    <jar name="lib/axis.jar"/>
    <jar name="lib/jaxrpc.jar"/>
    <jar name="lib/saaj.jar"/>

    <javadoc nested="java/build/javadocs"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="axis-dev@xml.apache.org">
      <regexp  subject="Build Failure - Axis"/>
      <regexp pattern="/timed out/" subject="Build timed out - Axis"/>
    </nag>
  </project>

  <project name="tt-bytecode">
    <url href="http://tt-bytecode.sourceforge.net/"/>
    <description>
      TechTrader Bytecode Toolkit
    </description>
    <home nested="java"/>
    <jar name="lib/tt-bytecode.jar"/>
  </project>

</module>
