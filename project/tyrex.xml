<module name="tyrex">

  <url href="http://tyrex.exolab.org/"/>
  <description>
    security and authentication, transactions, configuration, ...
  </description>

  <cvs repository="exolab" host-prefix="tyrex" dir="tyrex"/>
  
  <project name="tyrex">
    <ant basedir="src" target="jar">
      <property name="version" value="gump"/>
    </ant>
    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-log4j"/>
    <depend project="castor"/>
    <depend project="j2ee-connector"/>
    <depend project="jaas"/>
    <depend project="jta"/>
    <depend project="jts"/>
    <depend project="jdbc"/>
    <depend project="ldapsdk"/> <!-- From Castor -->
    <home nested="dist"/>
    <jar name="tyrex-gump.jar"/>
  </project>

</module>
