    <project name="krysalis-version-core" 
    	fullname="Krysalis Version Core Functions">

        <version major="0"
            minor="0"
            fix  ="1"
            tag="HEAD"/>

        <package>org.krysalis.version</package>

        <ant target="gump">
        	  <property name="DATE_STAMP" value="@@DATE@@"/>        	
        </ant>

        <!-- Work dirs to be included in classpath  -->
        <work nested="build/ant-bootstrap/krysalis-version-core/classes"/>
        <home nested="build/ant-bootstrap/krysalis-version-core"/>

        <code type="java/plain" dir="src/main"/>
 
    	<depend project="ant" inherit="runtime"/>
        <depend project="commons-logging"/>
    
	    <jar name="krysalis-version-core-@@DATE@@.jar"/>
        
   		<nag to="krysalis-developers@lists.sourceforge.net"
         	from="Adam Jack &lt;arb_jack@users.sourceforge.net&gt;"/>    
