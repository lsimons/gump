<?xml version="1.0"?>
<module name="krysalis-ruper">

  <url href="http://www.krysalis.org/ruper/"/>
  <description>
    ruper
  </description>

  <cvs repository="sourceforge" host-prefix="cvs.krysalis" dir="krysalis"/>
  
  <project name="krysalis-ruper-core">
    <package>org.krysalis.ruper</package>

    <!-- Work dirs to be included in classpath  -->
    <work nested="build/ant-bootstrap/krysalis-ruper-core/classes"/>
    <home nested="build/ant-bootstrap/krysalis-ruper-core"/>

    <ant target="gump">
      <property name="ant.home" reference="home" project="ant"/>
      <property name="project.name" value="krysalis-ruper-core"/>
      <property name="DATE_STAMP" value="@@DATE@@"/>        	
    </ant>
   
    <depend project="ant" inherit="runtime"/>
    <depend project="krysalis-version-core"/>
    <depend project="xml-xerces"/>
    <depend project="commons-vfs"/>
    <depend project="commons-logging"/>
    <depend project="commons-httpclient"/>
    <depend project="jakarta-regexp"/>
    
    <jar name="krysalis-ruper-core-@@DATE@@.jar"/>
    
    <javadoc nested="doc/api" project="krysalis-ruper"/>
        
    <nag to="krysalis-developers@lists.sourceforge.net"
         from="Adam Jack &lt;arb_jack@users.sourceforge.net&gt;"/>    
    
  </project>  
  	
  <project name="krysalis-ruper-ant">
    <package>org.krysalis.ruper</package>
    <home nested="build/ant-bootstrap/krysalis-ruper-ant"/>

    <ant target="gump">
      <property name="ant.home" reference="home" project="ant"/>
      <property name="project.name" value="krysalis-ruper-ant"/>
      <property name="project.part" value="ant"/>
      <property name="DATE_STAMP" value="@@DATE@@"/>        	
    </ant>
   
    <depend project="ant" inherit="all"/>
    <depend project="krysalis-ruper-core" inherit="all"/>
    <depend project="krysalis-version-ant" inherit="all"/>
    
    <jar name="krysalis-ruper-ant-@@DATE@@.jar"/>
    
    <javadoc nested="doc/api" project="krysalis-ruper"/>
        
    <nag to="krysalis-developers@lists.sourceforge.net"
         from="Adam Jack &lt;arb_jack@users.sourceforge.net&gt;"/>    
    
  </project>
 <project name="krysalis-ruper-ant-test">
    <package>org.krysalis.ruper.test</package>

    <ant target="gump" buildfile="build-ant-test.xml">
      <property name="ant.home" reference="home" project="ant"/>
      <property name="project.name" value="krysalis-ruper-ant-test"/>
    </ant>
   
    <depend project="ant" inherit="runtime"/>
    <depend project="krysalis-ruper-ant" inherit="all"/>
        
    <nag to="krysalis-developers@lists.sourceforge.net"
         from="Adam Jack &lt;arb_jack@users.sourceforge.net&gt;"/>    
    
  </project>
 
  <project name="krysalis-ruper">
    
   
      	<depend project="krysalis-centipede" inherit="all"/> 
    	<depend project="xml-xerces"/>
    	<depend project="commons-vfs"/>
    	<depend project="commons-logging"/>
    	<depend project="commons-httpclient"/>
    	<depend project="jakarta-regexp"/>
        <depend project="ant-testutil"/>
    	<depend project="junit"/>
    
    	<work nested="build/classes"/>
        <ant basedir="." buildfile="centibuild.xml" target="gump" vm="1.2">
        	<property name="ant.home" project="ant" reference="home"/>
        	<property name="project.name" value="krysalis-ruper"/>
      		<property name="DSTAMP" value="@@DATE@@"/>        	
      	</ant>
      	
      	<nag to="krysalis-developers@lists.sourceforge.net"
        	 from="Adam Jack &lt;arb_jack@users.sourceforge.net&gt;"/> 
  </project>  
  
  <!-- Eclipse Plugin -->
  <project name="krysalis-ruper-eclipse">
    
    <depend project="krysalis-ruper" inherit="all"/>
    <depend project="eclipse"/>
    <work nested="build/classes"/>
    <depend project="krysalis-centipede" inherit="all"/>
    <depend project="ant" inherit="all"/>
      	
    <ant basedir="." buildfile="centibuild.xml" target="gump" vm="1.2">
      	<property name="ant.home" project="ant" reference="home"/>
       	<property name="project.name" value="krysalis-ruper-eclipse"/>
    </ant>
      	
      	
    <nag to="krysalis-developers@lists.sourceforge.net"
     	from="Adam Jack &lt;arb_jack@users.sourceforge.net&gt;"/> 
  </project>  

</module>
