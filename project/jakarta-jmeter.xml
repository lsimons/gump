<module name="jakarta-jmeter">

  <url href="http://jakarta.apache.org/jmeter/" />
  <description>
    Pure Java load testing and performance measurement tool.
  </description>

  <cvs repository="jakarta" />
  
  <project name="jakarta-jmeter">
    <package>org.apache.jmeter</package>

    <ant target="dist"/>

    <depend project="jakarta-ant" />
    <depend project="xml-xerces" />
    <depend project="pngencoder" />
    <depend project="jaf" />
    <depend project="javamail" />
    <depend project="jsse" />
    <depend project="jakarta-oro" />
    <depend project="jakarta-avalon-logkit" />
    <depend project="jtidy" />
    <depend project="junit" />
    <depend project="jakarta-avalon" />
    <depend project="excalibur-cli" />

    <work nested="build/core"/>
    <work nested="build/jorphan"/>

    <!-- JMeter doesn't currently export any JARs
    <home nested="bin" />
    <jar name="ApacheJMeter.jar" />
    -->

    <nag from="Geir Magnusson Jr. &lt;geirm@apache.org&gt;"
         to="jmeter-dev@jakarta.apache.org">
        <regexp pattern="/BUILD FAILED/" subject="JMeter Build Failure"/>
        <regexp pattern="/FAILURES!!!/" subject="JMeter Unit Test Failure"/>
    </nag>
  </project>

  <project name="pngencoder">
    <package>com.keypoint</package>
    <url href="http://catcode.com/pngencoder/"/>
    <description>
      Convert a Java Image to PNG
    </description>

    <jar name="lib/util.jar"/>
  </project>

</module>
