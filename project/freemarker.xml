<module name="freemarker">

  <url href="http://freemarker.sourceforge.net/"/>
  <description>
    Templating Language
  </description>
  
  <cvs repository="sourceforge" host-prefix="cvs.freemarker" dir="freemarker"/>

  <project name="freemarker">
    <package>freemarker</package>
  
    <ant target="jar">
      <property name="javacc.home" reference="home" project="javacc"/>
    </ant>

    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    
    <depend project="jdom"/>
    <depend project="jakarta-servletapi"/>
    <depend project="jaxen"/>
    <depend project="junit"/>
    <depend project="jython"/>
    <depend project="jakarta-log4j"/>
    <depend project="jakarta-oro"/>
    <depend project="werken.xpath"/>
    <depend project="javacc"/>
    
    <work nested="build"/>
    <jar name="lib/freemarker.jar"/>
  </project>
</module>
