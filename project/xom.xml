    <jar name="build/xom-@@DATE@@.jar"/>
    <nag>
      <regexp 
        from="Elliotte Harold &lt;elharo@metalab.unc.edu&gt;"
        to="elharo@metalab.unc.edu"/>
      <regexp
        from="&lt;elharo@dev.java.net&gt;"
