<module name="jakarta-alexandria">

  <url href="http://java.apache.org/alexandria/"/>
  <description>
    Java documentation management system
  </description>

  <cvs repository="jakarta"/>
  
  <project name="jakarta-alexandria">
    <package>org.apache.alexandria</package>

    <ant target="dist"/>
    <depend project="xml-xalan2"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-ant"/>
    <depend project="jakarta-site2"/>
    <depend project="castor"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="alexandria-dev@jakarta.apache.org"/>
  </project>
  
  <project name="vindico">
    <package>org.apache.alexandria</package>

    <ant basedir="proposal/vindico" target="dist">
      <property name="component.version" value="@@DATE@@"/>
    </ant>

    <depend project="jakarta-ant"/>
    <depend project="xml-xerces"/>
    <depend project="commons-logging"/>
    <depend project="commons-collections"/>
    <depend project="commons-beanutils"/>
    <depend project="commons-digester"/>
    <depend project="commons-io"/>
    <depend project="junit"/>

    <home nested="proposal/vindico/dist"/>
    <jar name="vindico-@@DATE@@.jar"/>
    <javadoc nested="proposal/vindico/dist/docs/api"/>

    <nag from="Sam Ruby &lt;rubys@us.ibm.com&gt;"
         to="alexandria-dev@jakarta.apache.org"/>
  </project>

</module>
