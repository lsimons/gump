<module name="forehead">
  <description>forehead: framework to assist in controlling the run-time ClassLoader hierarchy of Java applications</description>
  <url href="http://forehead.werken.com/">
  </url>
  <cvs module="forehead" repository="codehaus" dir="forehead">
  </cvs>
  <project name="forehead">
    <package>com.werken.forehead</package>

    <ant buildfile="build.xml" target="dist">
      <property name="final.name" value="forehead-@@DATE@@" />
    </ant>

    <depend project="ant"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>

    <home nested="target"/>
    <jar name="forehead-@@DATE@@.jar"/>
    <nag to="bob@eng.werken.com" from="forehead development &lt;bob@eng.werken.com&gt;">
    </nag>
  </project>
</module>
