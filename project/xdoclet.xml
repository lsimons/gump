<module name="xdoclet">

  <url href="http://xdoclet.sourceforge.net/"/>
  <description>
    Enhanced Doclet engine.
  </description>

  <cvs repository="sourceforge" host-prefix="cvs.xdoclet" dir="xdoclet"/>
  
  <project name="xdoclet-compile-core">

    <description>Intermediate target that compiles xdoclet&apos;s core
    classes</description>

    <ant basedir="core" target="compile">
      <property name="ant.home" project="jakarta-ant" reference="home"/>
      <property name="version" value="@@DATE@@"/>
    </ant>

    <depend project="jakarta-ant" runtime="true"/>
    <depend project="xml-xerces"/>

    <depend project="jrefactory-pretty"/>
    <depend project="javacc" />
    <depend project="jakarta-log4j" runtime="true"/>
    <depend project="xjavadoc" runtime="true"/>
    <depend project="commons-logging" runtime="true" />
    <depend project="commons-collections" runtime="true"/>
    <depend project="junit"/>
    <work nested="core/build/classes"/>

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>

  <project name="xdoclet-xdoclet-module-prepare">

    <description>Intermediate target that prepares xdoclet&apos;s
    xdoclet module</description>

    <ant basedir="modules/xdoclet" target="xdoclet-xml" />

    <depend project="xdoclet-compile-core" inherit="all" />
    <depend project="xml-apis" />

    <work nested="core/build/classes" />

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>

  <project name="xdoclet-ejb-module-prepare">

    <description>Intermediate target that prepares xdoclet&apos;s
    ejb module</description>

    <ant basedir="modules/ejb" target="xdoclet-xml" />

    <depend project="ejb"/>
    <depend project="xdoclet-compile-core" inherit="all" />
    <depend project="xdoclet-xdoclet-module-prepare" />

    <work nested="core/build/classes" />

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>

  <project name="xdoclet-web-module-prepare">

    <description>Intermediate target that prepares xdoclet&apos;s
    web module</description>

    <ant basedir="modules/web" target="xdoclet-xml" />

    <depend project="xdoclet-compile-core" inherit="all" />
    <depend project="xdoclet-xdoclet-module-prepare" />

    <work nested="core/build/classes" />

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>

  <project name="xdoclet-hibernate-module-prepare">

    <description>Intermediate target that prepares xdoclet&apos;s
    hibernate module</description>

    <ant basedir="modules/hibernate" target="xdoclet-xml" />

    <depend project="xdoclet-compile-core" inherit="all" />
    <depend project="xdoclet-xdoclet-module-prepare" />

    <work nested="core/build/classes" />

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>

  <project name="xdoclet-apache-module-prepare">

    <description>Intermediate target that prepares xdoclet&apos;s
    apache module - needed to run antdoclet during main
    build</description>

    <ant basedir="modules/apache" target="xdoclet-xml" />

    <depend project="xdoclet-compile-core" inherit="all" />
    <depend project="xdoclet-xdoclet-module-prepare" />
    <depend project="xdoclet-ejb-module-prepare" />

    <work nested="core/build/classes" />
    <work nested="modules/build/xdoclet/classes"/>
    <work nested="modules/build/ejb/classes"/>

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>

  <project name="xdoclet">
    <package>xdoclet</package>

    <mkdir dir="modules/build/jdo/classes"/>
    <mkdir dir="modules/build/jmx/classes"/>

    <ant target="docs">
      <property name="ant.home" project="jakarta-ant" reference="home"/>
      <property name="version" value="@@DATE@@"/>
    </ant>

    <depend project="jakarta-ant" inherit="all" />
    <depend project="xdoclet-compile-core" inherit="all" />
    <depend project="xdoclet-apache-module-prepare" />
    <depend project="xdoclet-hibernate-module-prepare" />
    <depend project="xdoclet-web-module-prepare" />
    <depend project="xdoclet-xdoclet-module-prepare" />

    <depend project="xml-xalan2"/>
    <depend project="jmx"/>
    <depend project="jms"/>
    <depend project="jakarta-servletapi-4"/>
    <depend project="jakarta-bcel" runtime="true"/>
    <depend project="jakarta-site2" inherit="all"/>

    <work nested="core/build/classes" />
    <work nested="modules/build/apache/classes"/>
    <work nested="modules/build/ejb/classes"/>
    <work nested="modules/build/hibernate/classes"/>
    <work nested="modules/build/jdo/classes"/>
    <work nested="modules/build/jmx/classes"/>
    <work nested="modules/build/web/classes"/>
    <work nested="modules/build/xdoclet/classes"/>

    <!-- resources are left in src tree -->
    <work nested="modules/xdoclet/src"/>

    <home nested="target"/>
    <jar id="xdoclet-core" name="lib/xdoclet-@@DATE@@.jar"/>
    <jar id="xdoclet-apache" name="lib/xdoclet-apache-module-@@DATE@@.jar"/>
    <jar id="xdoclet-bea" name="lib/xdoclet-bea-module-@@DATE@@.jar"/>
    <jar id="xdoclet-borland" name="lib/xdoclet-borland-module-@@DATE@@.jar"/>
    <jar id="xdoclet-caucho" name="lib/xdoclet-caucho-module-@@DATE@@.jar"/>
    <jar id="xdoclet-ejb" name="lib/xdoclet-ejb-module-@@DATE@@.jar"/>
    <jar id="xdoclet-exolab" name="lib/xdoclet-exolab-module-@@DATE@@.jar"/>
    <jar id="xdoclet-hibernate"
         name="lib/xdoclet-hibernate-module-@@DATE@@.jar"/>
    <jar id="xdoclet-hp" name="lib/xdoclet-hp-module-@@DATE@@.jar"/>
    <jar id="xdoclet-ibm" name="lib/xdoclet-ibm-module-@@DATE@@.jar"/>
    <jar id="xdoclet-java" name="lib/xdoclet-java-module-@@DATE@@.jar"/>
    <jar id="xdoclet-jboss" name="lib/xdoclet-jboss-module-@@DATE@@.jar"/>
    <jar id="xdoclet-jdo" name="lib/xdoclet-jdo-module-@@DATE@@.jar"/>
    <jar id="xdoclet-jmx" name="lib/xdoclet-jmx-module-@@DATE@@.jar"/>
    <jar id="xdoclet-libelis" name="lib/xdoclet-libelis-module-@@DATE@@.jar"/>
    <jar id="xdoclet-macromedia" name="lib/xdoclet-macromedia-module-@@DATE@@.jar"/>
    <jar id="xdoclet-mvcsoft" name="lib/xdoclet-mvcsoft-module-@@DATE@@.jar"/>
    <jar id="xdoclet-mx4j" name="lib/xdoclet-mx4j-module-@@DATE@@.jar"/>
    <jar id="xdoclet-objectweb" name="lib/xdoclet-objectweb-module-@@DATE@@.jar"/>
    <jar id="xdoclet-orion" name="lib/xdoclet-orion-module-@@DATE@@.jar"/>
    <jar id="xdoclet-pramati" name="lib/xdoclet-pramati-module-@@DATE@@.jar"/>
    <jar id="xdoclet-solarmetric" name="lib/xdoclet-solarmetric-module-@@DATE@@.jar"/>
    <jar id="xdoclet-sybase" name="lib/xdoclet-sybase-module-@@DATE@@.jar"/>
    <jar id="xdoclet-tjdo" name="lib/xdoclet-tjdo-module-@@DATE@@.jar"/>
    <jar id="xdoclet-web" name="lib/xdoclet-web-module-@@DATE@@.jar"/>
    <jar id="xdoclet-webwork" name="lib/xdoclet-webwork-module-@@DATE@@.jar"/>
    <jar id="xdoclet-module" name="lib/xdoclet-xdoclet-module-@@DATE@@.jar"/>

    <javadoc nested="target/docs/api" />

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>
  
  <project name="xdoclet-examples">

    <ant target="samples" />
    <depend project="xdoclet" inherit="all"/>
    <depend project="ejb"/>
    <depend project="jakarta-struts"/>
    <depend project="webwork"/>
    <depend project="mx4j"/>
    <nag from="Peter Donald &lt;peter@apache.org&gt;"
         to="xdoclet-devel@lists.sourceforge.net"/>
  </project>

</module>
