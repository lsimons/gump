<module name="james-server">

  <url href="http://james.apache.org/index.html" />
  <description>
    Java Apache Mail Enterprise Server
  </description>

  <cvs repository="james" />

  <project name="dnsjava">
    <package>org.xbill.DNS</package>
    <url href="http://enigma.xbill.org/dnsjava/"/>
    <description>
      An implementation of DNS in Java
    </description>
    <jar name="lib/dnsjava-1.4.3.jar" />
  </project>

  <project name="james-server">
    <package>org.apache.james</package>
    <license name="LICENSE.txt"/>
    <ant buildfile="gump.xml"/>
    <depend project="ant"/>
    <depend project="xml-xerces"/>
    <depend project="avalon-framework" inherit="runtime"/>
    <depend project="cornerstone-threads-api"/>
    <depend project="cornerstone-threads-impl" inherit="runtime"/>
    <depend project="cornerstone-connection-api"/>
    <depend project="cornerstone-connection-impl" inherit="runtime"/>
    <depend project="cornerstone-datasources-api"/>
    <depend project="cornerstone-datasources-impl" inherit="runtime"/>
    <depend project="cornerstone-scheduler-api"/>
    <depend project="cornerstone-scheduler-impl" inherit="runtime"/>
    <depend project="cornerstone-store-api"/>
    <depend project="cornerstone-store-impl" inherit="runtime"/>
    <depend project="commons-net"/>
    <depend project="jakarta-oro"/>
    <depend project="town"/>
    <depend project="dnsjava"/>
    <depend project="javamail"/>
    <depend project="jaf"/>
    <home nested="target/deliverables" />
    <jar name="jars/james-@@DATE@@.bar" />
    <nag from="Gump Build Robot &lt;general@gump.apache.org&gt;"
         to="server-dev@james.apache.org"/>
  </project>

</module>
