<module name="avalon-logkit">

  <url href="http://jakarta.apache.org/avalon/"/>
  <description>
    Fast lightweight Logging toolkit
  </description>

  <cvs repository="avalon"/>

  <project name="jakarta-avalon-logkit">
    <package>org.apache.log</package>

    <ant>
      <property name="jakarta-site.dir" project="jakarta-site2"
          reference="srcdir" />
    </ant>
    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="xml-xerces"/>
    <depend project="junit"/>

    <option project="jdbc" runtime="true"/>
    <option project="jms" runtime="true"/>
    <option project="javamail" runtime="true"/>
    <option project="jaf" runtime="true"/>
    <option project="jakarta-servletapi-4" runtime="true"/>
    <option project="jakarta-log4j"/>

    <home nested="build/lib"/>
    <jar name="logkit.jar"/>
    <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="dev@avalon.apache.org"/>
  </project>

  <project name="dist-avalon-logkit">
    <ant>
      <property name="jakarta-site.dir" project="jakarta-site2"
          reference="srcdir" />
    </ant>
    <depend project="jakarta-ant" inherit="runtime"/>
    <depend project="jakarta-avalon-exceptionutil"/>
    <depend project="xml-xerces"/>
    <depend project="jakarta-avalon"/>
    <depend project="xml-stylebook2"/>
    <depend project="xml-xalan2"/>

    <option project="jdbc" runtime="true"/>
    <option project="jms" runtime="true"/>
    <option project="javamail" runtime="true"/>
    <option project="jaf" runtime="true"/>
    <option project="jakarta-servletapi-4" runtime="true"/>

    <home nested="build/lib"/>
    <jar name="logkit.jar"/>

    <nag from="Peter Donald &lt;peter@apache.org&gt;"
            to="dev@avalon.apache.org"/>
  </project>

</module>
