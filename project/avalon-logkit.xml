<module name="avalon-logkit">

    <url href="http://avalon.apache.org/"/>
    <description>
        Fast lightweight Logging toolkit
    </description>

    <cvs repository="avalon"/>

    <project name="dist-avalon-logkit" >
      <depend project="avalon-logkit" inherit="jars" />
    </project>
    
    <project name="avalon-logkit" buildfile="buildsystem/gump-build.xml" target="jar">
        <package>org.apache.log</package>
        <ant />
        <depend project="ant" inherit="runtime"/>
        <depend project="xml-xerces"/>
        <depend project="junit"/>

        <option project="jdbc" runtime="true"/>
        <option project="jms" runtime="true"/>
        <option project="javamail" runtime="true"/>
        <option project="jaf" runtime="true"/>
        <option project="jakarta-servletapi-4" runtime="true"/>
        <option project="logging-log4j" runtime="true"/>

        <home nested="target"/>
        <jar name="avalon-logkit-@@DATE@@.jar" />
        
        <javadoc nested="build/javadocs" module="avalon"/>
        <license name="LICENSE.txt"/>
        <nag from="Gump Integration Build &lt;dev@avalon.apache.org&gt;"
                    to="dev@avalon.apache.org"/>
    </project>
</module>
