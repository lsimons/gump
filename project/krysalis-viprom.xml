<?xml version="1.0"?>
<module name="krysalis-viprom">

  <url href="http://www.krysalis.org/viprom/"/>
  <description>
    (Vi)rtual (P)roject (O)bject (M)odel
  </description>

  <cvs repository="sourceforge" 
  	host-prefix="cvs.metamorphosis" 
  	dir="metamorphosis" module="viprom"/>
  
  <project name="krysalis-viprom-core">
    <package>org.krysalis.viprom</package>

    <!-- Work dirs to be included in classpath  -->
    <work nested="build/ant-bootstrap/krysalis-viprom-core/classes"/>
    <home nested="build/ant-bootstrap/krysalis-viprom-core"/>
    
    <ant target="gump">
      <property name="ant.home" reference="home" project="ant"/>
      <property name="project.name" value="krysalis-viprom-core"/>
      <property name="project.part" value="core"/>
    </ant>
   
    <depend project="ant" inherit="runtime"/>
    <depend project="krysalis-version-core"/>
    <depend project="xml-xerces"/>
    
    <jar name="krysalis-viprom-core-@@DATE@@.jar"/>
    
    <javadoc nested="doc/api" project="krysalis-viprom"/>
        
    <nag to="krysalis-developers@lists.sourceforge.net"
         from="Adam Jack &lt;arb_jack@users.sourceforge.net&gt;"/>    
    
  </project>  
  	
