<module name="jakarta-ant" tag="ANT_15_BRANCH">

  <url  href="http://jakarta.apache.org/ant/index.html"/>
  <description>
    Java based build tool
  </description>

  <cvs repository="jakarta"/>

  <project name="jakarta-ant">
    <package>org.apache.tools.ant</package>

    <ant target="dist-lite">
      <property name="ant.home" reference="home" project="jakarta-ant"/>
    </ant>

    <depend project="bootstrap-ant"/>
    <depend project="xml-xerces"/>
    <depend project="xml-apis" />
    <option project="xml-xalan2" ids="transformer" />
    <option project="xml-stylebook2"/>
    <option project="junit"/>

    <home nested="dist"/>
    <jar name="lib/ant.jar" id="ant"/>
    <jar name="lib/optional.jar" id="optional"/>

    <nag from="Diane Holt &lt;holtdl@apache.org&gt;"
         to="ant-dev@jakarta.apache.org"/>
  </project>

  <project name="dist-ant">
    <ant target="distribution">
      <property name="chmod.fail" value="false"/>
    </ant>

    <depend project="jakarta-ant" inherit="all"/>
    <option project="bsf"/>
    <option project="jakarta-regexp"/>
    <option project="jakarta-oro"/>
    <option project="jakarta-log4j"/>
    <option project="jaf"/>
    <option project="javamail"/>
    <option project="jakarta-bcel"/>
    <option project="antlr"/>
    <option project="jakarta-servletapi-4" />
    <option project="commons-logging" />
    <option project="xml-commons-resolver" />

    <home nested="build"/>
    <jar name="lib/ant.jar" id="ant"/>
    <jar name="lib/optional.jar" id="optional"/>
    <javadoc nested="build/javadocs" project="jakarta-ant"/>

    <deliver fromdir="distribution/src" tosite="stefans-test"
             todir="ant1.5.2alpha/@@DATE@@/" />
    <deliver fromdir="distribution/bin" tosite="stefans-test"
             todir="ant1.5.2alpha/@@DATE@@/" />

    <nag from="Diane Holt &lt;holtdl@apache.org&gt;"
         to="ant-dev@jakarta.apache.org"/>
  </project>

  <project name="jakarta-ant-testutil">
    <ant target="test-jar"/>

    <depend project="dist-ant" inherit="all"/>
    <option project="jakarta-tomcat-4.0" ids="jasper-compiler jasper-runtime"/>

    <home nested="build/lib"/>
    <jar name="ant-testutil.jar" id="ant-testutil"/>

    <nag from="Diane Holt &lt;holtdl@apache.org&gt;"
         to="ant-dev@jakarta.apache.org"/>
  </project>

  <project name="test-ant">
    <ant target="run-tests">
      <property name="have.cvs" value="true"/>
    </ant>

    <depend project="jakarta-ant-testutil" inherit="all"/>
    <option project="xml-commons-which"/>
    <option project="rhino"/>
    <option project="beanshell"/>

    <work nested="build/testcases"/>
    <work nested="src/testcases"/>
    <work nested="src/etc/testcases"/>

    <nag from="Diane Holt &lt;holtdl@apache.org&gt;"
         to="ant-dev@jakarta.apache.org"
         subject="Test Failure - Ant"/>
  </project>

  <project name="bootstrap-ant">
    <script name="bootstrap"/>

    <option project="jaxp"/>

    <home nested="bootstrap"/>
    <jar name="lib/ant.jar"/>

    <nag from="Diane Holt &lt;holtdl@apache.org&gt;"
         to="ant-dev@jakarta.apache.org"
         subject="Bootstrap Failure - Ant">
      <regexp pattern="/error/"/>
      <regexp pattern="/Failed/"/>
      <regexp />
    </nag>
  </project>

  <project name="jakarta-ant-embed">
    <package>org.apache.tools.ant</package>

    <ant basedir="proposal/embed">
      <property name="ant.home" reference="home" project="jakarta-ant"/>
      <depend id="api" project="commons-logging"
              property="commons-logging.jar"/>
      <depend property="jxpath.jar" project="commons-jxpath"/>
      <depend property="velocity.jar" project="jakarta-velocity"/>
      <depend property="velocity-dep.jar" project="jakarta-velocity"/>
      <depend property="jexl.jar" project="commons-jexl"/>
      <depend property="commons-discovery.jar" project="commons-discovery"/>
    </ant>

    <depend project="jakarta-ant" inherit="all"/>

    <home nested="proposal/embed/build"/>
    <jar name="ant-sax2.jar" id="embed"/>

    <nag to="ant-dev@jakarta.apache.org"
         from="Nicola Ken Barozzi &lt;nicolaken@apache.org&gt;"/>

  </project>

  <project name="jakarta-ant-embed-optional">
    <package>org.apache.tools.ant</package>

    <ant basedir="proposal/embed" target="embed-optional" >
      <property name="ant.home" reference="home" project="jakarta-ant"/>
      <depend id="api" project="commons-logging"
              property="commons-logging.jar"/>
      <depend property="jxpath.jar" project="commons-jxpath"/>
      <depend property="velocity.jar" project="jakarta-velocity"/>
      <depend property="velocity-dep.jar" project="jakarta-velocity"/>
      <depend property="jexl.jar" project="commons-jexl"/>
      <depend property="commons-discovery.jar" project="commons-discovery"/>
    </ant>

    <depend project="jakarta-ant" inherit="all"/>

    <home nested="proposal/embed/build"/>
    <jar name="optional-dynprop.jar" id="embed-optional"/>

    <nag to="ant-dev@jakarta.apache.org"
         from="Nicola Ken Barozzi &lt;nicolaken@apache.org&gt;"/>
  </project>

</module>

