<workspace basedir="/data/gump"
           pkgdir="/data/gump/opt"
           sync="rsync -r -a --delete"
           jardir="/data/gump/log/jars"
           logurl='http://lsd.student.utwente.nl/gump/'
           version="0.3">

  <property name="build.sysclasspath" value="only"/>

  <profile href="profile/gump.xml"/>

  <!-- experimental! -->
<!--  <module href="http://cvs.apache.org/viewcvs.cgi/*checkout*/avalon/buildsystem/gump-integration/project/avalon.xml"/>-->

  <javadoc dir="/data/gump/log/javadoc" url="http://lsd.student.utwente.nl/gump/javadoc/"/>
  <junitreport dir="/data/gump/log/junitreport" url="http://lsd.student.utwente.nl/gump/junitreport/"/>

  <!-- After the bootstrap -->
  <module href="project/gump.xml"/>
  <project name="gump" home="/data/gump/jakarta-gump">
    <ant>
      <property name="workspace" value="lsd.xml"/>
      <property name="webstyle" value="stylesheet/jakarta.xsl"/>
      <property name="target" value="bash"/>
      <property name="extension" value="sh"/>
    </ant>
  </project>

</workspace>
